@model Arcade.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<style>
    .change-password-container {
        max-width: 600px;
        margin: 2rem auto;
    }

    .change-password-card {
        background: var(--arcade-surface);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        padding: 2rem;
    }

    .change-password-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--arcade-border);
    }

    .change-password-title {
        font-family: 'Poppins', sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--arcade-text);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .change-password-title i {
        color: var(--arcade-primary);
    }

    .change-password-subtitle {
        font-size: 0.95rem;
        color: var(--arcade-text-muted);
    }

    .security-notice {
        background: rgba(124, 58, 237, 0.1);
        border: 1px solid rgba(124, 58, 237, 0.2);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
    }

    .security-notice i {
        color: var(--arcade-primary);
        font-size: 1.25rem;
        margin-top: 0.125rem;
        flex-shrink: 0;
    }

    .security-notice p {
        margin: 0;
        color: var(--arcade-text);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .password-form-group {
        margin-bottom: 1.5rem;
    }

    .password-form-label {
        display: block;
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        color: var(--arcade-text);
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .password-form-label i {
        color: var(--arcade-primary);
        margin-right: 0.5rem;
    }

    .password-input-group {
        position: relative;
        display: flex;
    }

    .password-input {
        flex: 1;
        padding: 0.875rem 3rem 0.875rem 1rem;
        background: var(--arcade-bg);
        border: 1px solid var(--arcade-border);
        border-radius: 8px;
        color: var(--arcade-text);
        font-size: 0.95rem;
        transition: all 0.3s ease;
        width: 100%;
    }

    .password-input:focus {
        outline: none;
        border-color: var(--arcade-primary);
        box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
    }

    .toggle-password-btn {
        position: absolute;
        right: 0;
        top: 0;
        height: 100%;
        padding: 0 1rem;
        background: transparent;
        border: none;
        color: var(--arcade-text-muted);
        cursor: pointer;
        transition: color 0.3s ease;
    }

    .toggle-password-btn:hover {
        color: var(--arcade-primary);
    }

    .password-requirements {
        margin-top: 0.75rem;
        padding: 1rem;
        background: var(--arcade-bg-alt);
        border: 1px solid var(--arcade-border);
        border-radius: 8px;
    }

    .password-requirements-title {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--arcade-text);
        margin-bottom: 0.5rem;
    }

    .password-requirements ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .password-requirements li {
        font-size: 0.85rem;
        color: var(--arcade-text-muted);
        padding: 0.25rem 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .password-requirements li i {
        width: 16px;
        color: var(--arcade-text-muted);
        transition: color 0.3s ease;
    }

    .password-requirements li.valid {
        color: var(--arcade-success);
    }

    .password-requirements li.valid i {
        color: var(--arcade-success);
    }

    .password-form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .password-btn {
        padding: 0.875rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .password-btn-primary {
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent)) !important;
        color: #000000 !important;
        text-shadow: none;
    }

    .password-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(124, 58, 237, 0.3);
    }

    .password-btn-ghost {
        background: transparent;
        color: var(--arcade-text);
        border: 1px solid var(--arcade-border);
    }

    .password-btn-ghost:hover {
        background: var(--arcade-bg-alt);
        border-color: var(--arcade-primary);
    }

    .security-badge {
        text-align: center;
        padding: 1rem;
        margin-top: 2rem;
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.2);
        border-radius: 8px;
        color: var(--arcade-success);
        font-size: 0.85rem;
    }

    .security-badge i {
        margin-right: 0.5rem;
    }

    @@media (max-width: 576px) {
        .change-password-container {
            padding: 1rem;
        }

        .change-password-card {
            padding: 1.5rem;
        }

        .password-form-actions {
            flex-direction: column;
        }

        .password-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="change-password-container">
    <div class="change-password-card">
        <div class="change-password-header">
            <h1 class="change-password-title">
                <i class="fas fa-key"></i>
                Change Password
            </h1>
            <p class="change-password-subtitle">Update your account security</p>
        </div>

        <div class="security-notice">
            <i class="fas fa-info-circle"></i>
            <p>For your security, please enter your current password and choose a strong new password.</p>
        </div>

        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="password-form-group">
                <label asp-for="CurrentPassword" class="password-form-label">
                    <i class="fas fa-lock"></i> Current Password
                </label>
                <div class="password-input-group">
                    <input asp-for="CurrentPassword" class="password-input"
                        placeholder="Enter your current password" />
                    <button type="button" class="toggle-password-btn" tabindex="-1">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
            </div>

            <div class="password-form-group">
                <label asp-for="NewPassword" class="password-form-label">
                    <i class="fas fa-lock"></i> New Password
                </label>
                <div class="password-input-group">
                    <input asp-for="NewPassword" class="password-input" placeholder="Enter new password" />
                    <button type="button" class="toggle-password-btn" tabindex="-1">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                <div class="password-requirements">
                    <p class="password-requirements-title">Password must contain:</p>
                    <ul>
                        <li id="req-length"><i class="fas fa-circle"></i> At least 8 characters</li>
                        <li id="req-upper"><i class="fas fa-circle"></i> One uppercase letter</li>
                        <li id="req-lower"><i class="fas fa-circle"></i> One lowercase letter</li>
                        <li id="req-number"><i class="fas fa-circle"></i> One number</li>
                        <li id="req-special"><i class="fas fa-circle"></i> One special character</li>
                    </ul>
                </div>
            </div>

            <div class="password-form-group">
                <label asp-for="ConfirmPassword" class="password-form-label">
                    <i class="fas fa-lock"></i> Confirm New Password
                </label>
                <div class="password-input-group">
                    <input asp-for="ConfirmPassword" class="password-input" placeholder="Confirm new password" />
                    <button type="button" class="toggle-password-btn" tabindex="-1">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="password-form-actions">
                <button type="submit" class="password-btn password-btn-primary">
                    <i class="fas fa-check"></i> Update Password
                </button>
                <a asp-action="Profile" class="password-btn password-btn-ghost">
                    <i class="fas fa-arrow-left"></i> Back to Profile
                </a>
            </div>

            <div class="security-badge">
                <i class="fas fa-shield-alt"></i>
                Your password is encrypted with industry-standard security
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle password visibility
        document.querySelectorAll('.toggle-password-btn').forEach(button => {
            button.addEventListener('click', function () {
                const input = this.previousElementSibling;
                const icon = this.querySelector('i');
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });

        // Password requirements validation
        const newPassword = document.getElementById('NewPassword');
        if (newPassword) {
            newPassword.addEventListener('input', function () {
                const val = this.value;
                toggleReq('req-length', val.length >= 8);
                toggleReq('req-upper', /[A-Z]/.test(val));
                toggleReq('req-lower', /[a-z]/.test(val));
                toggleReq('req-number', /[0-9]/.test(val));
                toggleReq('req-special', /[^A-Za-z0-9]/.test(val));
            });
        }

        function toggleReq(id, valid) {
            const el = document.getElementById(id);
            if (el) {
                el.classList.toggle('valid', valid);
                const icon = el.querySelector('i');
                icon.classList.toggle('fa-circle', !valid);
                icon.classList.toggle('fa-check-circle', valid);
            }
        }
    </script>
}
