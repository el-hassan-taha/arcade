@model Arcade.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arcade</title>
    <link rel="icon" type="image/svg+xml" href="~/images/logo.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --arcade-primary: #7c3aed;
            --arcade-primary-hover: #6d28d9;
            --arcade-accent: #06b6d4;
            --arcade-bg: #0a0d14;
            --arcade-surface: #12161f;
            --arcade-card: #181d2a;
            --arcade-border: #2a3042;
            --arcade-text: #f1f5f9;
            --arcade-text-secondary: #94a3b8;
            --arcade-text-muted: #64748b;
            --arcade-danger: #ef4444;
            --arcade-gradient: linear-gradient(135deg, #7c3aed 0%, #06b6d4 100%);
            --arcade-radius: 12px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', -apple-system, sans-serif;
            background: var(--arcade-bg);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                radial-gradient(ellipse 80% 50% at 20% 40%, rgba(124, 58, 237, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse 60% 40% at 80% 60%, rgba(6, 182, 212, 0.12) 0%, transparent 50%),
                radial-gradient(ellipse 40% 30% at 50% 80%, rgba(124, 58, 237, 0.08) 0%, transparent 50%);
            pointer-events: none;
            z-index: 0;
        }

        /* Grid Pattern */
        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image:
                linear-gradient(rgba(124, 58, 237, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(124, 58, 237, 0.03) 1px, transparent 1px);
            background-size: 50px 50px;
            pointer-events: none;
            z-index: 0;
        }

        .auth-container {
            width: 100%;
            max-width: 420px;
            position: relative;
            z-index: 1;
        }

        .auth-card {
            background: linear-gradient(180deg, rgba(24, 29, 42, 0.95) 0%, rgba(18, 22, 31, 0.98) 100%);
            border: 1px solid var(--arcade-border);
            border-radius: 20px;
            padding: 2.5rem 2rem;
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(124, 58, 237, 0.1);
            backdrop-filter: blur(20px);
            position: relative;
            overflow: hidden;
        }

        .auth-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--arcade-gradient);
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .auth-logo {
            width: 70px;
            height: 70px;
            margin: 0 auto 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(124, 58, 237, 0.2), rgba(6, 182, 212, 0.2));
            border-radius: 50%;
            border: 2px solid rgba(124, 58, 237, 0.3);
        }

        .auth-logo i {
            font-size: 2rem;
            background: var(--arcade-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .auth-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--arcade-text);
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            color: var(--arcade-text-secondary);
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--arcade-text);
            margin-bottom: 0.5rem;
        }

        .form-label i {
            color: var(--arcade-primary);
            font-size: 0.8rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            background: rgba(10, 13, 20, 0.6);
            border: 1px solid var(--arcade-border);
            border-radius: var(--arcade-radius);
            color: var(--arcade-text);
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--arcade-primary);
            box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.15), 0 0 20px rgba(124, 58, 237, 0.1);
            background: rgba(10, 13, 20, 0.8);
        }

        .form-input::placeholder {
            color: var(--arcade-text-muted);
        }

        .input-group {
            position: relative;
            display: flex;
        }

        .input-group .form-input {
            padding-right: 3rem;
        }

        .toggle-password {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--arcade-text-muted);
            cursor: pointer;
            padding: 0.25rem;
            transition: color 0.2s;
        }

        .toggle-password:hover {
            color: var(--arcade-primary);
        }

        .form-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .checkbox {
            width: 18px;
            height: 18px;
            accent-color: var(--arcade-primary);
            cursor: pointer;
        }

        .checkbox-label {
            font-size: 0.875rem;
            color: var(--arcade-text-secondary);
            cursor: pointer;
        }

        .forgot-link {
            font-size: 0.875rem;
            color: var(--arcade-primary);
            text-decoration: none;
            transition: color 0.2s;
        }

        .forgot-link:hover {
            color: var(--arcade-accent);
            text-decoration: underline;
        }

        .btn-primary {
            width: 100%;
            padding: 1rem;
            font-size: 1rem;
            font-weight: 600;
            background: var(--arcade-gradient);
            border: none;
            border-radius: var(--arcade-radius);
            color: #fff;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(124, 58, 237, 0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 30px rgba(124, 58, 237, 0.5);
        }

        .btn-outline {
            width: 100%;
            padding: 0.875rem;
            font-size: 0.95rem;
            font-weight: 500;
            background: transparent;
            border: 1px solid var(--arcade-border);
            border-radius: var(--arcade-radius);
            color: var(--arcade-text);
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-outline:hover {
            border-color: var(--arcade-primary);
            color: var(--arcade-primary);
            background: rgba(124, 58, 237, 0.05);
        }

        .divider {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1.5rem 0;
            color: var(--arcade-text-muted);
            font-size: 0.85rem;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--arcade-border);
        }

        .auth-footer {
            text-align: center;
            color: var(--arcade-text-secondary);
            font-size: 0.9rem;
        }

        .auth-footer p {
            margin-bottom: 0.75rem;
        }

        .validation-error {
            display: block;
            color: var(--arcade-danger);
            font-size: 0.8rem;
            margin-top: 0.375rem;
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: var(--arcade-radius);
            color: #fca5a5;
            padding: 1rem;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-bolt"></i>
                </div>
                <h1 class="auth-title">Welcome Back</h1>
                <p class="auth-subtitle">Sign in to your account to continue</p>
            </div>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

                @if (ViewBag.ReturnUrl != null)
                {
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                }

                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope"></i> Email Address
                    </label>
                    <input asp-for="Email" class="form-input" placeholder="john.doe@example.com" autocomplete="email" />
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i> Password
                    </label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-input" placeholder="••••••••"
                            autocomplete="current-password" />
                        <button type="button" class="toggle-password" tabindex="-1">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="validation-error"></span>
                </div>

                <div class="form-row">
                    <div class="checkbox-wrapper">
                        <input asp-for="RememberMe" class="checkbox" />
                        <label asp-for="RememberMe" class="checkbox-label">Remember me</label>
                    </div>
                    <a href="#" class="forgot-link">Forgot password?</a>
                </div>

                <button type="submit" class="btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Sign In
                </button>
            </form>

            <div class="divider"><span>OR</span></div>

            <div class="auth-footer">
                <p>Don't have an account?</p>
                <a asp-action="Register" class="btn-outline">
                    <i class="fas fa-user-plus"></i> Create Account
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function () {
                const input = this.previousElementSibling;
                const icon = this.querySelector('i');
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });
    </script>
</body>

</html>