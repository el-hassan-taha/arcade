@model Arcade.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arcade</title>
    <link rel="icon" type="image/svg+xml" href="~/images/logo.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --arcade-primary: #7c3aed;
            --arcade-primary-hover: #6d28d9;
            --arcade-accent: #06b6d4;
            --arcade-bg: #0a0d14;
            --arcade-surface: #12161f;
            --arcade-card: #181d2a;
            --arcade-border: #2a3042;
            --arcade-text: #f1f5f9;
            --arcade-text-secondary: #94a3b8;
            --arcade-text-muted: #64748b;
            --arcade-danger: #ef4444;
            --arcade-gradient: linear-gradient(135deg, #7c3aed 0%, #06b6d4 100%);
            --arcade-radius: 12px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', -apple-system, sans-serif;
            background: var(--arcade-bg);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                radial-gradient(ellipse 80% 50% at 20% 40%, rgba(124, 58, 237, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse 60% 40% at 80% 60%, rgba(6, 182, 212, 0.12) 0%, transparent 50%),
                radial-gradient(ellipse 40% 30% at 50% 80%, rgba(124, 58, 237, 0.08) 0%, transparent 50%);
            pointer-events: none;
            z-index: 0;
        }

        /* Grid Pattern */
        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image:
                linear-gradient(rgba(124, 58, 237, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(124, 58, 237, 0.03) 1px, transparent 1px);
            background-size: 50px 50px;
            pointer-events: none;
            z-index: 0;
        }

        .auth-container {
            width: 100%;
            max-width: 480px;
            position: relative;
            z-index: 1;
        }

        .auth-card {
            background: linear-gradient(180deg, rgba(24, 29, 42, 0.95) 0%, rgba(18, 22, 31, 0.98) 100%);
            border: 1px solid var(--arcade-border);
            border-radius: 20px;
            padding: 2.5rem 2rem;
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(124, 58, 237, 0.1);
            backdrop-filter: blur(20px);
            position: relative;
            overflow: hidden;
        }

        .auth-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--arcade-gradient);
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .auth-logo {
            width: 70px;
            height: 70px;
            margin: 0 auto 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(124, 58, 237, 0.2), rgba(6, 182, 212, 0.2));
            border-radius: 50%;
            border: 2px solid rgba(124, 58, 237, 0.3);
        }

        .auth-logo i {
            font-size: 2rem;
            background: var(--arcade-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .auth-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--arcade-text);
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            color: var(--arcade-text-secondary);
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--arcade-text);
            margin-bottom: 0.5rem;
        }

        .form-label i {
            color: var(--arcade-primary);
            font-size: 0.8rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            background: rgba(10, 13, 20, 0.6);
            border: 1px solid var(--arcade-border);
            border-radius: var(--arcade-radius);
            color: var(--arcade-text);
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--arcade-primary);
            box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.15), 0 0 20px rgba(124, 58, 237, 0.1);
            background: rgba(10, 13, 20, 0.8);
        }

        .form-input::placeholder {
            color: var(--arcade-text-muted);
        }

        .input-group {
            position: relative;
            display: flex;
        }

        .input-group .form-input {
            padding-right: 3rem;
        }

        .toggle-password {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--arcade-text-muted);
            cursor: pointer;
            padding: 0.25rem;
            transition: color 0.2s;
        }

        .toggle-password:hover {
            color: var(--arcade-primary);
        }

        .password-hint {
            margin-top: 0.75rem;
            font-size: 0.8rem;
            color: var(--arcade-accent);
            display: flex;
            align-items: center;
            gap: 0.35rem;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .checkbox {
            width: 18px;
            height: 18px;
            accent-color: var(--arcade-primary);
            cursor: pointer;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .checkbox-label {
            font-size: 0.875rem;
            color: var(--arcade-text-secondary);
            line-height: 1.5;
            cursor: pointer;
        }

        .checkbox-label a {
            color: var(--arcade-primary);
            text-decoration: none;
        }

        .checkbox-label a:hover {
            text-decoration: underline;
        }

        .btn-primary {
            width: 100%;
            padding: 1rem;
            font-size: 1rem;
            font-weight: 600;
            background: var(--arcade-gradient);
            border: none;
            border-radius: var(--arcade-radius);
            color: #fff;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(124, 58, 237, 0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            margin-top: 1.5rem;
        }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 30px rgba(124, 58, 237, 0.5);
        }

        .btn-primary:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }

        .btn-outline {
            width: 100%;
            padding: 0.875rem;
            font-size: 0.95rem;
            font-weight: 500;
            background: transparent;
            border: 1px solid var(--arcade-border);
            border-radius: var(--arcade-radius);
            color: var(--arcade-text);
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-outline:hover {
            border-color: var(--arcade-primary);
            color: var(--arcade-primary);
            background: rgba(124, 58, 237, 0.05);
        }

        .divider {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1.5rem 0;
            color: var(--arcade-text-muted);
            font-size: 0.85rem;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--arcade-border);
        }

        .auth-footer {
            text-align: center;
            color: var(--arcade-text-secondary);
            font-size: 0.9rem;
        }

        .auth-footer p {
            margin-bottom: 0.75rem;
        }

        .validation-error {
            display: block;
            color: var(--arcade-danger);
            font-size: 0.8rem;
            margin-top: 0.375rem;
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: var(--arcade-radius);
            color: #fca5a5;
            padding: 1rem;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }

        .row {
            display: flex;
            gap: 1rem;
        }

        .col-6 {
            flex: 1;
        }

        @@media (max-width: 480px) {
            .row {
                flex-direction: column;
                gap: 0;
            }

            .auth-card {
                padding: 2rem 1.5rem;
            }
        }
    </style>
</head>

<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-user-astronaut"></i>
                </div>
                <h1 class="auth-title">Join the Future</h1>
                <p class="auth-subtitle">Create your account to start shopping</p>
            </div>

            <form asp-action="Register" method="post" id="registerForm">
                <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">
                                <i class="fas fa-user"></i> First Name <span
                                    style="color: var(--arcade-danger);">*</span>
                            </label>
                            <input asp-for="FirstName" class="form-input required-field" placeholder="John" />
                            <span asp-validation-for="FirstName" class="validation-error"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">
                                <i class="fas fa-user"></i> Last Name <span
                                    style="color: var(--arcade-danger);">*</span>
                            </label>
                            <input asp-for="LastName" class="form-input required-field" placeholder="Doe" />
                            <span asp-validation-for="LastName" class="validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope"></i> Email Address <span
                            style="color: var(--arcade-danger);">*</span>
                    </label>
                    <input asp-for="Email" class="form-input required-field" placeholder="john.doe@example.com"
                        autocomplete="email" />
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="form-label">
                        <i class="fas fa-phone"></i> Phone Number
                    </label>
                    <input asp-for="Phone" class="form-input" placeholder="+1 (555) 123-4567" autocomplete="tel" />
                    <span asp-validation-for="Phone" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="form-label">
                        <i class="fas fa-map-marker-alt"></i> Address
                    </label>
                    <input asp-for="Address" class="form-input" placeholder="123 Main St, City, State 12345"
                        autocomplete="street-address" />
                    <span asp-validation-for="Address" class="validation-error"></span>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock"></i> Password <span style="color: var(--arcade-danger);">*</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-input required-field" placeholder="••••••••"
                                    autocomplete="new-password" />
                                <button type="button" class="toggle-password" tabindex="-1">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="validation-error"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i> Confirm <span style="color: var(--arcade-danger);">*</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-input required-field"
                                    placeholder="••••••••" autocomplete="new-password" />
                                <button type="button" class="toggle-password" tabindex="-1">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="password-hint">
                    <i class="fas fa-info-circle"></i> Min 8 characters with uppercase, lowercase, number & special
                    character
                </div>

                <div class="form-group" style="margin-top: 1.25rem;">
                    <div class="checkbox-wrapper">
                        <input type="checkbox" id="terms" class="checkbox" required />
                        <label for="terms" class="checkbox-label">
                            I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a> <span
                                style="color: var(--arcade-danger);">*</span>
                        </label>
                    </div>
                </div>

                <button type="submit" id="submitBtn" class="btn-primary" disabled>
                    <i class="fas fa-rocket"></i> Create Account
                </button>
            </form>

            <div class="divider"><span>OR</span></div>

            <div class="auth-footer">
                <p>Already have an account?</p>
                <a asp-action="Login" class="btn-outline">
                    <i class="fas fa-sign-in-alt"></i> Sign In
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Toggle password visibility
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function () {
                const input = this.previousElementSibling;
                const icon = this.querySelector('i');
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });

        // Form validation for enabling submit button
        const form = document.getElementById('registerForm');
        const submitBtn = document.getElementById('submitBtn');
        const requiredFields = document.querySelectorAll('.required-field');
        const termsCheckbox = document.getElementById('terms');

        function validateForm() {
            let isValid = true;

            // Check all required text fields
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    isValid = false;
                }
            });

            // Check terms checkbox
            if (!termsCheckbox.checked) {
                isValid = false;
            }

            // Check if passwords match
            const password = document.getElementById('Password').value;
            const confirmPassword = document.getElementById('ConfirmPassword').value;
            if (password && confirmPassword && password !== confirmPassword) {
                isValid = false;
            }

            // Enable/disable button
            submitBtn.disabled = !isValid;
        }

        // Add event listeners
        requiredFields.forEach(field => {
            field.addEventListener('input', validateForm);
        });
        termsCheckbox.addEventListener('change', validateForm);

        // Initial validation
        validateForm();
    </script>
</body>

</html>