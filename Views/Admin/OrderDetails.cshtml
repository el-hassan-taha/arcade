@model Arcade.ViewModels.AdminOrderDetailsViewModel
@{
    ViewData["Title"] = $"Order #{Model.Order.OrderNumber}";
    Layout = "_AdminLayout";
    var orderAge = (DateTime.Now - Model.Order.OrderDate).Days;
    var itemCount = Model.Order.OrderDetails?.Sum(o => o.Quantity) ?? 0;
}

<style>
    /* Enhanced Admin Order Details Styles */
    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .order-header-left {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--arcade-text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: var(--arcade-primary);
    }

    .order-title-row {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .order-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .order-number {
        color: var(--arcade-primary);
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-badge.pending {
        background: rgba(255, 193, 7, 0.15);
        color: var(--arcade-warning);
    }

    .status-badge.processing {
        background: rgba(0, 212, 255, 0.15);
        color: var(--arcade-primary);
    }

    .status-badge.shipped {
        background: rgba(139, 92, 246, 0.15);
        color: #8b5cf6;
    }

    .status-badge.delivered,
    .status-badge.completed {
        background: rgba(0, 255, 136, 0.15);
        color: var(--arcade-success);
    }

    .status-badge.cancelled {
        background: rgba(255, 68, 68, 0.15);
        color: var(--arcade-danger);
    }

    .order-meta {
        display: flex;
        gap: 2rem;
        color: var(--arcade-text-muted);
        font-size: 0.9rem;
    }

    .order-meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .order-header-actions {
        display: flex;
        gap: 0.75rem;
    }

    /* Quick Stats Row */
    .order-stats-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    @@media (max-width: 992px) {
        .order-stats-row {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .order-stat-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 12px;
        padding: 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .order-stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .order-stat-icon.items {
        background: rgba(0, 212, 255, 0.15);
        color: var(--arcade-primary);
    }

    .order-stat-icon.value {
        background: rgba(0, 255, 136, 0.15);
        color: var(--arcade-success);
    }

    .order-stat-icon.age {
        background: rgba(255, 193, 7, 0.15);
        color: var(--arcade-warning);
    }

    .order-stat-icon.priority {
        background: rgba(139, 92, 246, 0.15);
        color: #8b5cf6;
    }

    .order-stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
    }

    .order-stat-label {
        font-size: 0.85rem;
        color: var(--arcade-text-muted);
    }

    /* Main Content Grid */
    .order-content-grid {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 1.5rem;
    }

    @@media (max-width: 1200px) {
        .order-content-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Card Styles */
    .detail-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .detail-card-header {
        background: rgba(0, 0, 0, 0.2);
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .detail-card-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .detail-card-title i {
        color: var(--arcade-primary);
    }

    .detail-card-body {
        padding: 1.25rem;
    }

    /* Items Table */
    .items-table {
        width: 100%;
        border-collapse: collapse;
    }

    .items-table th {
        padding: 1rem 1.25rem;
        text-align: left;
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--arcade-text-muted);
        background: rgba(0, 0, 0, 0.2);
        border-bottom: 1px solid var(--arcade-border);
    }

    .items-table td {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        vertical-align: middle;
    }

    .items-table tbody tr:last-child td {
        border-bottom: none;
    }

    .items-table tfoot td {
        padding: 1rem 1.25rem;
        background: rgba(0, 0, 0, 0.1);
    }

    .items-table tfoot tr:first-child td {
        border-top: 2px solid var(--arcade-border);
    }

    /* Product Cell */
    .product-cell {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .product-thumb {
        width: 60px;
        height: 60px;
        border-radius: 10px;
        object-fit: cover;
        border: 1px solid var(--arcade-border);
    }

    .product-info {
        flex: 1;
        min-width: 0;
    }

    .product-name {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .product-sku {
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
        font-family: 'Courier New', monospace;
    }

    .qty-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.35rem 0.75rem;
        background: rgba(139, 92, 246, 0.15);
        border: 1px solid rgba(139, 92, 246, 0.3);
        border-radius: 8px;
        color: #a78bfa;
        font-weight: 600;
    }

    .price {
        font-weight: 600;
    }

    .price-total {
        color: var(--arcade-primary);
        font-weight: 700;
    }

    .total-row {
        font-size: 1.1rem;
    }

    .grand-total {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--arcade-primary);
    }

    /* Status Update Card */
    .status-update-card {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.05), rgba(139, 92, 246, 0.05));
    }

    .status-options {
        display: grid;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .status-option {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: var(--arcade-bg);
        border: 2px solid var(--arcade-border);
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .status-option:hover {
        border-color: var(--arcade-primary);
    }

    .status-option.selected {
        border-color: var(--arcade-primary);
        background: rgba(0, 212, 255, 0.1);
    }

    .status-option input {
        display: none;
    }

    .status-option-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .status-option-dot.pending {
        background: var(--arcade-warning);
    }

    .status-option-dot.processing {
        background: var(--arcade-primary);
    }

    .status-option-dot.shipped {
        background: #8b5cf6;
    }

    .status-option-dot.delivered {
        background: var(--arcade-success);
    }

    .status-option-dot.cancelled {
        background: var(--arcade-danger);
    }

    .status-option-text {
        font-weight: 500;
    }

    /* Customer Info */
    .customer-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.25rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--arcade-border);
    }

    .customer-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
        color: #000;
    }

    .customer-name {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .customer-email {
        font-size: 0.9rem;
        color: var(--arcade-text-muted);
    }

    .customer-email a {
        color: var(--arcade-primary);
        text-decoration: none;
    }

    .customer-email a:hover {
        text-decoration: underline;
    }

    .customer-stats {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .customer-stat {
        background: var(--arcade-bg);
        padding: 0.75rem;
        border-radius: 8px;
        text-align: center;
    }

    .customer-stat-value {
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--arcade-primary);
    }

    .customer-stat-label {
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
    }

    /* Shipping Info */
    .shipping-address {
        background: var(--arcade-bg);
        padding: 1rem;
        border-radius: 10px;
        border-left: 3px solid var(--arcade-primary);
    }

    .shipping-address p {
        margin: 0;
        line-height: 1.6;
    }

    .shipping-map-placeholder {
        margin-top: 1rem;
        height: 120px;
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(0, 255, 136, 0.1));
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--arcade-text-muted);
        gap: 0.5rem;
    }

    /* Enhanced Timeline */
    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0.5rem;
        top: 0.5rem;
        bottom: 0.5rem;
        width: 2px;
        background: linear-gradient(180deg, var(--arcade-success), var(--arcade-border));
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1.5rem;
    }

    .timeline-item:last-child {
        padding-bottom: 0;
    }

    .timeline-dot {
        position: absolute;
        left: -1.6rem;
        top: 0.15rem;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        background: var(--arcade-border);
        border: 2px solid var(--arcade-bg-card);
    }

    .timeline-item.completed .timeline-dot {
        background: var(--arcade-success);
        box-shadow: 0 0 10px rgba(0, 255, 136, 0.5);
    }

    .timeline-item.current .timeline-dot {
        background: var(--arcade-primary);
        box-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
        animation: pulse 2s infinite;
    }

    .timeline-item.cancelled .timeline-dot {
        background: var(--arcade-danger);
        box-shadow: 0 0 10px rgba(255, 68, 68, 0.5);
    }

    @@keyframes pulse {

        0%,
        100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.2);
        }
    }

    .timeline-content {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .timeline-title {
        font-weight: 600;
    }

    .timeline-date {
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
    }

    /* Notes Card */
    .notes-card {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.05), transparent);
    }

    .notes-content {
        background: var(--arcade-bg);
        padding: 1rem;
        border-radius: 10px;
        border-left: 3px solid var(--arcade-warning);
        line-height: 1.6;
    }

    /* Quick Actions */
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.75rem;
    }

    .quick-action-btn {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem;
        background: var(--arcade-bg);
        border: 1px solid var(--arcade-border);
        border-radius: 10px;
        color: var(--arcade-text);
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .quick-action-btn:hover {
        border-color: var(--arcade-primary);
        background: rgba(0, 212, 255, 0.05);
        transform: translateY(-2px);
    }

    .quick-action-btn i {
        font-size: 1.25rem;
        color: var(--arcade-primary);
    }

    .quick-action-btn span {
        font-size: 0.85rem;
    }
</style>

<!-- Header -->
<div class="order-header">
    <div class="order-header-left">
        <a asp-action="Orders" class="back-link">
            <i class="fas fa-arrow-left"></i> Back to Orders
        </a>
        <div class="order-title-row">
            <h1 class="order-title">
                Order <span class="order-number">#@Model.Order.OrderNumber</span>
            </h1>
            <span class="status-badge @Model.Order.Status.ToLower()">
                @GetStatusIcon(Model.Order.Status)
                @Model.Order.Status
            </span>
        </div>
        <div class="order-meta">
            <div class="order-meta-item">
                <i class="fas fa-calendar"></i>
                @Model.Order.OrderDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
            </div>
            <div class="order-meta-item">
                <i class="fas fa-clock"></i>
                @orderAge days ago
            </div>
        </div>
    </div>
    <div class="order-header-actions">
        <button type="button" class="cyber-btn cyber-btn-ghost" onclick="window.print()">
            <i class="fas fa-print"></i> Print
        </button>
        <button type="button" class="cyber-btn cyber-btn-primary" onclick="downloadInvoice()">
            <i class="fas fa-download"></i> Download Invoice
        </button>
    </div>
</div>

<!-- Quick Stats -->
<div class="order-stats-row">
    <div class="order-stat-card">
        <div class="order-stat-icon items">
            <i class="fas fa-shopping-bag"></i>
        </div>
        <div>
            <div class="order-stat-value">@itemCount</div>
            <div class="order-stat-label">Items Ordered</div>
        </div>
    </div>
    <div class="order-stat-card">
        <div class="order-stat-icon value">
            <i class="fas fa-coins"></i>
        </div>
        <div>
            <div class="order-stat-value">@Model.Order.TotalAmount.ToString("N0")</div>
            <div class="order-stat-label">Order Value (EGP)</div>
        </div>
    </div>
    <div class="order-stat-card">
        <div class="order-stat-icon age">
            <i class="fas fa-hourglass-half"></i>
        </div>
        <div>
            <div class="order-stat-value">@orderAge</div>
            <div class="order-stat-label">Days Since Order</div>
        </div>
    </div>
    <div class="order-stat-card">
        <div class="order-stat-icon priority">
            <i class="fas fa-flag"></i>
        </div>
        <div>
            <div class="order-stat-value">@(Model.Order.TotalAmount > 5000 ? "High" : "Normal")</div>
            <div class="order-stat-label">Priority Level</div>
        </div>
    </div>
</div>

<div class="order-content-grid">
    <!-- Main Content -->
    <div>
        <!-- Order Items -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3 class="detail-card-title">
                    <i class="fas fa-shopping-bag"></i> Order Items
                </h3>
                <span style="color: var(--arcade-text-muted);">@itemCount item(s)</span>
            </div>
            <div style="overflow-x: auto;">
                <table class="items-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="text-center">Qty</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Order.OrderDetails != null)
                        {
                            @foreach (var item in Model.Order.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        <div class="product-cell">
                                            <img src="@(item.ProductImageUrl ?? "/images/placeholder.svg")"
                                                alt="@item.ProductName" class="product-thumb"
                                                onerror="this.onerror=null; this.src='/images/placeholder.svg';">
                                            <div class="product-info">
                                                <div class="product-name">@item.ProductName</div>
                                                @if (item.Product != null)
                                                {
                                                    <div class="product-sku">SKU: @item.Product.SKU</div>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="qty-badge">Ã—@item.Quantity</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="price">@item.UnitPrice.ToString("N0") EGP</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="price-total">@((item.UnitPrice * item.Quantity).ToString("N0")) EGP</span>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                            <td class="text-end">@Model.Order.TotalAmount.ToString("N0") EGP</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-end">Shipping:</td>
                            <td class="text-end" style="color: var(--arcade-success);">Free</td>
                        </tr>
                        <tr class="total-row">
                            <td colspan="3" class="text-end"><strong>Grand Total:</strong></td>
                            <td class="text-end">
                                <span class="grand-total">@Model.Order.TotalAmount.ToString("N0") EGP</span>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3 class="detail-card-title">
                    <i class="fas fa-bolt"></i> Quick Actions
                </h3>
            </div>
            <div class="detail-card-body">
                <div class="quick-actions">
                    <a href="mailto:@Model.Order.User?.Email" class="quick-action-btn">
                        <i class="fas fa-envelope"></i>
                        <span>Email Customer</span>
                    </a>
                    <button class="quick-action-btn" onclick="sendSMS()">
                        <i class="fas fa-sms"></i>
                        <span>Send SMS</span>
                    </button>
                    <button class="quick-action-btn" onclick="generateShippingLabel()">
                        <i class="fas fa-tag"></i>
                        <span>Shipping Label</span>
                    </button>
                    <button class="quick-action-btn" onclick="duplicateOrder()">
                        <i class="fas fa-copy"></i>
                        <span>Duplicate Order</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div>
        <!-- Update Status -->
        <div class="detail-card status-update-card">
            <div class="detail-card-header">
                <h3 class="detail-card-title">
                    <i class="fas fa-edit"></i> Update Status
                </h3>
            </div>
            <div class="detail-card-body">
                <form asp-action="UpdateOrderStatus" method="post" id="statusForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Order.OrderId" />
                    <div class="status-options">
                        @foreach (var status in Model.AvailableStatuses)
                        {
                            var isSelected = Model.Order.Status == status;
                            <label class="status-option @(isSelected ? "selected" : "")"
                                onclick="selectStatus(this, '@status')">
                                <input type="radio" name="status" value="@status" @(isSelected ? "checked" : "")>
                                <span class="status-option-dot @status.ToLower()"></span>
                                <span class="status-option-text">@status</span>
                            </label>
                        }
                    </div>
                    <button type="submit" class="cyber-btn cyber-btn-primary" style="width: 100%;">
                        <i class="fas fa-save"></i> Update Status
                    </button>
                </form>
            </div>
        </div>

        <!-- Customer Info -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3 class="detail-card-title">
                    <i class="fas fa-user"></i> Customer
                </h3>
            </div>
            <div class="detail-card-body">
                <div class="customer-header">
                    <div class="customer-avatar">
                        @(Model.Order.User?.FullName?.Substring(0, 1).ToUpper() ?? "?")
                    </div>
                    <div>
                        <div class="customer-name">@Model.Order.User?.FullName</div>
                        <div class="customer-email">
                            <a href="mailto:@Model.Order.User?.Email">@Model.Order.User?.Email</a>
                        </div>
                    </div>
                </div>
                <div class="customer-stats">
                    <div class="customer-stat">
                        <div class="customer-stat-value">1</div>
                        <div class="customer-stat-label">Total Orders</div>
                    </div>
                    <div class="customer-stat">
                        <div class="customer-stat-value">@Model.Order.TotalAmount.ToString("N0")</div>
                        <div class="customer-stat-label">Total Spent</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shipping Info -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3 class="detail-card-title">
                    <i class="fas fa-truck"></i> Shipping Address
                </h3>
            </div>
            <div class="detail-card-body">
                <div class="shipping-address">
                    <p><strong>@Model.Order.User?.FullName</strong></p>
                    <p>@Model.Order.Street</p>
                    <p>@Model.Order.City</p>
                </div>
                <div class="shipping-map-placeholder">
                    <i class="fas fa-map-marker-alt"></i>
                    View on Map
                </div>
            </div>
        </div>

        <!-- Order Timeline -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3 class="detail-card-title">
                    <i class="fas fa-history"></i> Order Timeline
                </h3>
            </div>
            <div class="detail-card-body">
                <div class="timeline">
                    <div class="timeline-item completed">
                        <div class="timeline-dot"></div>
                        <div class="timeline-content">
                            <span class="timeline-title">Order Placed</span>
                            <span class="timeline-date">@Model.Order.OrderDate.ToString("MMM dd, yyyy h:mm tt")</span>
                        </div>
                    </div>

                    @if (Model.Order.Status != "Pending" && Model.Order.Status != "Cancelled")
                    {
                        <div class="timeline-item @(Model.Order.Status == "Processing" ? "current" : "completed")">
                            <div class="timeline-dot"></div>
                            <div class="timeline-content">
                                <span class="timeline-title">Processing</span>
                                <span class="timeline-date">Order is being processed</span>
                            </div>
                        </div>
                    }

                    @if (Model.Order.ShippedDate.HasValue)
                    {
                        <div class="timeline-item @(Model.Order.Status == "Shipped" ? "current" : "completed")">
                            <div class="timeline-dot"></div>
                            <div class="timeline-content">
                                <span class="timeline-title">Shipped</span>
                                <span class="timeline-date">@Model.Order.ShippedDate?.ToString("MMM dd, yyyy h:mm                                tt")</span>
                            </div>
                        </div>
                    }
                    else if (Model.Order.Status != "Cancelled" && Model.Order.Status != "Pending")
                    {
                        <div class="timeline-item">
                            <div class="timeline-dot"></div>
                            <div class="timeline-content">
                                <span class="timeline-title">Shipped</span>
                                <span class="timeline-date">Awaiting shipment</span>
                            </div>
                        </div>
                    }

                    @if (Model.Order.DeliveredDate.HasValue)
                    {
                        <div class="timeline-item completed">
                            <div class="timeline-dot"></div>
                            <div class="timeline-content">
                                <span class="timeline-title">Delivered</span>
                                <span class="timeline-date">@Model.Order.DeliveredDate?.ToString("MMM dd, yyyy h:mm tt")</span>
                            </div>
                        </div>
                    }
                    else if (Model.Order.Status != "Cancelled" && Model.Order.ShippedDate.HasValue)
                    {
                        <div class="timeline-item">
                            <div class="timeline-dot"></div>
                            <div class="timeline-content">
                                <span class="timeline-title">Delivered</span>
                                <span class="timeline-date">Out for delivery</span>
                            </div>
                        </div>
                    }

                    @if (Model.Order.Status == "Cancelled")
                    {
                        <div class="timeline-item cancelled">
                            <div class="timeline-dot"></div>
                            <div class="timeline-content">
                                <span class="timeline-title">Cancelled</span>
                                <span class="timeline-date">Order was cancelled</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusIcon(string status)
    {
        return status switch
        {
            "Pending" => "<i class='fas fa-clock'></i>",
            "Processing" => "<i class='fas fa-cog fa-spin'></i>",
            "Shipped" => "<i class='fas fa-shipping-fast'></i>",
            "Delivered" or "Completed" => "<i class='fas fa-check-circle'></i>",
            "Cancelled" => "<i class='fas fa-times-circle'></i>",
            _ => "<i class='fas fa-question-circle'></i>"
        };
    }
}

