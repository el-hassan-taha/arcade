@model Arcade.ViewModels.AdminProductListViewModel
@{
    ViewData["Title"] = "Manage Products";
    Layout = "_AdminLayout";
}

<style>
    /* Enhanced Products Page Styles */
    .products-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .products-title-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .products-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .products-title i {
        color: var(--arcade-primary);
    }
    
    .products-count-badge {
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        color: #000;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .products-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }
    
    /* Stats Cards */
    .products-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .stat-mini-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 12px;
        padding: 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
    }
    
    .stat-mini-card:hover {
        border-color: var(--arcade-primary);
        transform: translateY(-2px);
    }
    
    .stat-mini-icon {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }
    
    .stat-mini-card.total .stat-mini-icon { background: rgba(0, 212, 255, 0.15); color: var(--arcade-primary); }
    .stat-mini-card.instock .stat-mini-icon { background: rgba(0, 255, 136, 0.15); color: var(--arcade-success); }
    .stat-mini-card.low .stat-mini-icon { background: rgba(255, 193, 7, 0.15); color: var(--arcade-warning); }
    .stat-mini-card.out .stat-mini-icon { background: rgba(255, 68, 68, 0.15); color: var(--arcade-danger); }
    
    .stat-mini-value {
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
    }
    
    .stat-mini-label {
        font-size: 0.85rem;
        color: var(--arcade-text-muted);
    }
    
    /* Enhanced Filters */
    .filters-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }
    
    .filters-row {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: flex-end;
    }
    
    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .filter-group.search {
        flex: 2;
        min-width: 250px;
    }
    
    .filter-label {
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .search-input-wrapper {
        position: relative;
    }
    
    .search-input-wrapper input {
        padding-left: 2.75rem;
        height: 44px;
    }
    
    .search-input-wrapper i {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--arcade-text-muted);
    }
    
    .filter-select {
        height: 44px;
        min-width: 150px;
    }
    
    .filter-actions {
        display: flex;
        gap: 0.5rem;
    }
    
    .filter-btn {
        height: 44px;
        padding: 0 1.25rem;
    }
    
    /* View Toggle */
    .view-toggle {
        display: flex;
        gap: 0;
        border: 1px solid var(--arcade-border);
        border-radius: 8px;
        overflow: hidden;
    }
    
    .view-toggle-btn {
        width: 44px;
        height: 44px;
        border: none;
        background: var(--arcade-bg);
        color: var(--arcade-text-muted);
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .view-toggle-btn:hover {
        color: var(--arcade-primary);
    }
    
    .view-toggle-btn.active {
        background: var(--arcade-primary);
        color: #000;
    }
    
    /* Products Table Card */
    .products-table-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        overflow: hidden;
    }
    
    .table-toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        background: rgba(0, 0, 0, 0.1);
    }
    
    .bulk-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .products-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .products-table th {
        padding: 1rem 1.25rem;
        text-align: left;
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--arcade-text-muted);
        background: rgba(0, 0, 0, 0.2);
        border-bottom: 1px solid var(--arcade-border);
    }
    
    .products-table td {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        vertical-align: middle;
    }
    
    .products-table tbody tr {
        transition: all 0.2s ease;
    }
    
    .products-table tbody tr:hover {
        background: rgba(0, 212, 255, 0.03);
    }
    
    .products-table tbody tr:last-child td {
        border-bottom: none;
    }
    
    /* Product Cell */
    .product-cell {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .product-thumb {
        width: 60px;
        height: 60px;
        border-radius: 10px;
        object-fit: cover;
        border: 1px solid var(--arcade-border);
        flex-shrink: 0;
    }
    
    .product-info {
        flex: 1;
        min-width: 0;
    }
    
    .product-name {
        font-weight: 600;
        font-size: 0.95rem;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .product-id {
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
        font-family: 'Courier New', monospace;
    }
    
    /* Category Badge */
    .category-badge {
        background: rgba(0, 212, 255, 0.1);
        color: var(--arcade-primary);
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    
    /* Price */
    .price {
        font-weight: 700;
        font-size: 1rem;
    }
    
    /* Stock Cell */
    .stock-cell {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .stock-bar {
        width: 60px;
        height: 6px;
        background: var(--arcade-border);
        border-radius: 3px;
        overflow: hidden;
    }
    
    .stock-bar-fill {
        height: 100%;
        border-radius: 3px;
        transition: width 0.3s ease;
    }
    
    .stock-bar-fill.high { background: var(--arcade-success); }
    .stock-bar-fill.medium { background: var(--arcade-warning); }
    .stock-bar-fill.low { background: var(--arcade-danger); }
    
    .stock-count {
        font-weight: 600;
        min-width: 30px;
    }
    
    .stock-count.out { color: var(--arcade-danger); }
    .stock-count.low { color: var(--arcade-warning); }
    
    /* Status Badge */
    .status-badge {
        padding: 0.4rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }
    
    .status-badge.active { background: rgba(0, 255, 136, 0.15); color: var(--arcade-success); }
    .status-badge.low { background: rgba(255, 193, 7, 0.15); color: var(--arcade-warning); }
    .status-badge.out { background: rgba(255, 68, 68, 0.15); color: var(--arcade-danger); }
    .status-badge.inactive { background: rgba(128, 128, 128, 0.15); color: #888; }
    
    /* Action Buttons */
    .actions-cell {
        display: flex;
        gap: 0.5rem;
    }
    
    .action-btn {
        width: 34px;
        height: 34px;
        border-radius: 8px;
        border: 1px solid var(--arcade-border);
        background: var(--arcade-bg);
        color: var(--arcade-text);
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        text-decoration: none;
    }
    
    .action-btn:hover {
        transform: translateY(-2px);
    }
    
    .action-btn.view:hover { color: var(--arcade-primary); border-color: var(--arcade-primary); }
    .action-btn.edit:hover { color: var(--arcade-warning); border-color: var(--arcade-warning); }
    .action-btn.delete:hover { color: var(--arcade-danger); border-color: var(--arcade-danger); }
    
    /* Grid View */
    .products-grid {
        display: none;
        padding: 1.25rem;
    }
    
    .products-grid.active {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.25rem;
    }
    
    .product-grid-card {
        background: var(--arcade-bg);
        border: 1px solid var(--arcade-border);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .product-grid-card:hover {
        border-color: var(--arcade-primary);
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }
    
    .product-grid-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-bottom: 1px solid var(--arcade-border);
    }
    
    .product-grid-body {
        padding: 1.25rem;
    }
    
    .product-grid-category {
        display: inline-block;
        background: rgba(0, 212, 255, 0.1);
        color: var(--arcade-primary);
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        margin-bottom: 0.5rem;
    }
    
    .product-grid-name {
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .product-grid-price {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--arcade-primary);
        margin-bottom: 1rem;
    }
    
    .product-grid-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid var(--arcade-border);
    }
    
    .product-grid-stock {
        font-size: 0.85rem;
    }
    
    .product-grid-actions {
        display: flex;
        gap: 0.5rem;
    }
    
    /* Pagination */
    .table-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.25rem;
        border-top: 1px solid var(--arcade-border);
        background: rgba(0, 0, 0, 0.1);
    }
    
    .pagination {
        display: flex;
        gap: 0.5rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }
    
    .page-link {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        border: 1px solid var(--arcade-border);
        background: var(--arcade-bg);
        color: var(--arcade-text);
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .page-link:hover {
        border-color: var(--arcade-primary);
        color: var(--arcade-primary);
    }
    
    .page-item.active .page-link {
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        border-color: var(--arcade-primary);
        color: #000;
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }
    
    .empty-state i {
        font-size: 4rem;
        color: var(--arcade-text-muted);
        margin-bottom: 1rem;
    }
    
    @@media (max-width: 768px) {
        .products-header {
            flex-direction: column;
            align-items: stretch;
        }
        
        .products-actions {
            justify-content: center;
        }
        
        .filters-row {
            flex-direction: column;
        }
        
        .filter-group {
            width: 100%;
        }
    }
</style>

<!-- Header -->
<div class="products-header">
    <div class="products-title-section">
        <h1 class="products-title">
            <i class="fas fa-box"></i> Products
        </h1>
        <span class="products-count-badge">@Model.TotalItems Products</span>
    </div>
    <div class="products-actions">
        <a asp-action="CreateProduct" class="cyber-btn cyber-btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>
</div>

<!-- Quick Stats -->
<div class="products-stats">
    <div class="stat-mini-card total">
        <div class="stat-mini-icon">
            <i class="fas fa-box"></i>
        </div>
        <div>
            <div class="stat-mini-value">@Model.TotalItems</div>
            <div class="stat-mini-label">Total Products</div>
        </div>
    </div>
    <div class="stat-mini-card instock">
        <div class="stat-mini-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div>
            <div class="stat-mini-value">@Model.TotalInStockCount</div>
            <div class="stat-mini-label">In Stock</div>
        </div>
    </div>
    <div class="stat-mini-card low">
        <div class="stat-mini-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div>
            <div class="stat-mini-value">@Model.TotalLowStockCount</div>
            <div class="stat-mini-label">Low Stock</div>
        </div>
    </div>
    <div class="stat-mini-card out">
        <div class="stat-mini-icon">
            <i class="fas fa-times-circle"></i>
        </div>
        <div>
            <div class="stat-mini-value">@Model.TotalOutOfStockCount</div>
            <div class="stat-mini-label">Out of Stock</div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="filters-card">
    <form asp-action="Products" method="get" class="filters-row">
        <div class="filter-group search">
            <span class="filter-label">Search</span>
            <div class="search-input-wrapper">
                <i class="fas fa-search"></i>
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="cyber-input"
                    placeholder="Search products by name...">
            </div>
        </div>
        <div class="filter-group">
            <span class="filter-label">Category</span>
            <select name="categoryId" class="cyber-select filter-select">
                <option value="">All Categories</option>
                @if (Model.Categories != null)
                {
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.CategoryId" selected="@(Model.CategoryId == category.CategoryId)">
                            @category.CategoryName
                        </option>
                    }
                }
            </select>
        </div>
        <div class="filter-group">
            <span class="filter-label">Stock Status</span>
            <select name="stockStatus" class="cyber-select filter-select">
                <option value="">All Status</option>
                <option value="instock" selected="@(Model.StockStatus == "instock")">In Stock</option>
                <option value="lowstock" selected="@(Model.StockStatus == "lowstock")">Low Stock</option>
                <option value="outofstock" selected="@(Model.StockStatus == "outofstock")">Out of Stock</option>
            </select>
        </div>
        <div class="filter-group filter-actions">
            <button type="submit" class="cyber-btn cyber-btn-primary filter-btn">
                <i class="fas fa-filter"></i> Apply
            </button>
            <a asp-action="Products" class="cyber-btn cyber-btn-ghost filter-btn">
                <i class="fas fa-times"></i> Clear
            </a>
        </div>
        <div class="view-toggle">
            <button type="button" class="view-toggle-btn active" data-view="table" title="Table View">
                <i class="fas fa-list"></i>
            </button>
            <button type="button" class="view-toggle-btn" data-view="grid" title="Grid View">
                <i class="fas fa-th"></i>
            </button>
        </div>
    </form>
</div>

<!-- Products Table Card -->
<div class="products-table-card">
    <div class="table-toolbar">
        <div class="bulk-actions">
            <input type="checkbox" id="selectAll" style="width: 18px; height: 18px; accent-color: var(--arcade-primary);">
            <label for="selectAll" style="margin-left: 0.5rem;">Select All</label>
            <button type="button" class="cyber-btn cyber-btn-sm cyber-btn-ghost" disabled id="bulkDeleteBtn">
                <i class="fas fa-trash"></i> Delete Selected
            </button>
        </div>
        <div style="color: var(--arcade-text-muted); font-size: 0.9rem;">
            Showing @Model.Products?.Count() of @Model.TotalItems products
        </div>
    </div>
    
    <!-- Table View -->
    <div class="products-table-wrapper" id="tableView" style="overflow-x: auto;">
        <table class="products-table">
            <thead>
                <tr>
                    <th style="width: 40px;"></th>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products != null && Model.Products.Any())
                {
                    @foreach (var product in Model.Products)
                    {
                        var stockPercent = Math.Min(product.StockQuantity, 100);
                        var stockClass = product.StockQuantity == 0 ? "low" : (product.IsLowStock ? "medium" : "high");
                        <tr>
                            <td>
                                <input type="checkbox" class="product-checkbox" value="@product.ProductId" 
                                       style="width: 18px; height: 18px; accent-color: var(--arcade-primary);">
                            </td>
                            <td>
                                <div class="product-cell">
                                    <img src="@(product.ImageUrl ?? "/images/placeholder.svg")" alt="@product.ProductName"
                                        class="product-thumb" onerror="this.onerror=null; this.src='/images/placeholder.svg';">
                                    <div class="product-info">
                                        <div class="product-name">@product.ProductName</div>
                                        <div class="product-id">ID: @product.ProductId</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="category-badge">@product.Category?.CategoryName</span>
                            </td>
                            <td>
                                <span class="price">@product.Price.ToString("N0") EGP</span>
                            </td>
                            <td>
                                <div class="stock-cell">
                                    <div class="stock-bar">
                                        <div class="stock-bar-fill @stockClass" style="width: @stockPercent%"></div>
                                    </div>
                                    <span class="stock-count @(product.StockQuantity == 0 ? "out" : product.IsLowStock ? "low" : "")">
                                        @product.StockQuantity
                                    </span>
                                </div>
                            </td>
                            <td>
                                @if (!product.IsActive)
                                {
                                    <span class="status-badge inactive">Inactive</span>
                                }
                                else if (!product.IsInStock)
                                {
                                    <span class="status-badge out">Out of Stock</span>
                                }
                                else if (product.IsLowStock)
                                {
                                    <span class="status-badge low">Low Stock</span>
                                }
                                else
                                {
                                    <span class="status-badge active">Active</span>
                                }
                            </td>
                            <td>
                                <div class="actions-cell">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"
                                        class="action-btn view" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="EditProduct" asp-route-id="@product.ProductId"
                                        class="action-btn edit" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="DeleteProduct" asp-route-id="@product.ProductId" method="post"
                                        class="d-inline" onsubmit="return confirm('Delete this product?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="action-btn delete" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">
                            <div class="empty-state">
                                <i class="fas fa-box-open"></i>
                                <h3>No products found</h3>
                                <p>Try adjusting your filters or add a new product</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <!-- Grid View -->
    <div class="products-grid" id="gridView">
        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="product-grid-card">
                    <img src="@(product.ImageUrl ?? "/images/placeholder.svg")" alt="@product.ProductName"
                        class="product-grid-image" onerror="this.onerror=null; this.src='/images/placeholder.svg';">
                    <div class="product-grid-body">
                        <span class="product-grid-category">@product.Category?.CategoryName</span>
                        <h3 class="product-grid-name">@product.ProductName</h3>
                        <div class="product-grid-price">@product.Price.ToString("N0") EGP</div>
                        <div class="product-grid-footer">
                            <span class="product-grid-stock @(product.StockQuantity == 0 ? "text-danger" : product.IsLowStock ? "text-warning" : "text-success")">
                                @(product.StockQuantity == 0 ? "Out of Stock" : product.StockQuantity + " in stock")
                            </span>
                            <div class="product-grid-actions">
                                <a asp-action="EditProduct" asp-route-id="@product.ProductId" class="action-btn edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="action-btn view">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    
    @if (Model.TotalPages > 1)
    {
        <div class="table-footer">
            <div style="color: var(--arcade-text-muted); font-size: 0.9rem;">
                Page @Model.CurrentPage of @Model.TotalPages
            </div>
            <ul class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a asp-action="Products" asp-route-page="@(Model.CurrentPage - 1)"
                            asp-route-searchTerm="@Model.SearchTerm" asp-route-categoryId="@Model.CategoryId"
                            class="page-link">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }
                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                }
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a asp-action="Products" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm"
                            asp-route-categoryId="@Model.CategoryId" class="page-link">@i</a>
                    </li>
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a asp-action="Products" asp-route-page="@(Model.CurrentPage + 1)"
                            asp-route-searchTerm="@Model.SearchTerm" asp-route-categoryId="@Model.CategoryId"
                            class="page-link">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Select all functionality
        document.getElementById('selectAll')?.addEventListener('change', function() {
            document.querySelectorAll('.product-checkbox').forEach(cb => cb.checked = this.checked);
            updateBulkBtn();
        });
        
        document.querySelectorAll('.product-checkbox').forEach(cb => {
            cb.addEventListener('change', updateBulkBtn);
        });
        
        function updateBulkBtn() {
            const checked = document.querySelectorAll('.product-checkbox:checked').length;
            const btn = document.getElementById('bulkDeleteBtn');
            btn.disabled = checked === 0;
            btn.innerHTML = checked > 0 ? `<i class="fas fa-trash"></i> Delete (${checked})` : '<i class="fas fa-trash"></i> Delete Selected';
        }
        
        // View toggle
        document.querySelectorAll('.view-toggle-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.view-toggle-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const view = this.dataset.view;
                if (view === 'grid') {
                    document.getElementById('tableView').style.display = 'none';
                    document.getElementById('gridView').classList.add('active');
                } else {
                    document.getElementById('tableView').style.display = 'block';
                    document.getElementById('gridView').classList.remove('active');
                }
            });
        });
    </script>
}