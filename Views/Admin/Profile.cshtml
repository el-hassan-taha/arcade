@model Arcade.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Admin Profile";
    Layout = "_AdminLayout";
}

<style>
    /* Admin profile theming */
    .admin-profile-shell {
        background: radial-gradient(circle at 10% 20%, rgba(99,102,241,0.08), transparent 30%),
                    radial-gradient(circle at 80% 0%, rgba(34,211,238,0.08), transparent 30%),
                    #0f172a;
        border-radius: 18px;
        padding: 1.5rem;
        border: 1px solid rgba(255,255,255,0.05);
        box-shadow: 0 10px 40px rgba(0,0,0,0.25);
    }

    .admin-card {
        background: linear-gradient(145deg, rgba(30,41,59,0.9), rgba(15,23,42,0.9));
        border: 1px solid rgba(255,255,255,0.05);
        border-radius: 16px;
        box-shadow: 0 12px 40px rgba(0,0,0,0.2);
    }

    .admin-card h3, .admin-card h5 { color: #e2e8f0; }
    .admin-card .text-muted { color: #94a3b8 !important; }

    .admin-badge {
        background: linear-gradient(120deg, #6366f1, #22d3ee);
        color: #0f172a;
        font-weight: 700;
        border-radius: 12px;
        padding: 0.35rem 0.75rem;
    }

    .form-label { color: #cbd5e1; font-weight: 600; }
    .form-control {
        background: rgba(15,23,42,0.8);
        border: 1px solid rgba(99,102,241,0.25);
        color: #e2e8f0;
    }
    .form-control:focus {
        box-shadow: 0 0 0 3px rgba(99,102,241,0.25);
        border-color: #818cf8;
    }

    .admin-cta-row { gap: 0.75rem; }
    .admin-cta-row .btn { padding: 0.65rem 1.1rem; border-radius: 10px; }

    .summary-block dt { letter-spacing: 0.05em; font-size: 0.8rem; }
    .summary-block dd { color: #e2e8f0; }

    @@media (max-width: 991.98px) {
        .admin-cta-row { flex-direction: column; }
        .admin-cta-row .btn { width: 100%; }
    }
</style>

<div class="container-fluid py-4">
    <div class="admin-profile-shell">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="admin-card h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div>
                                <h3 class="mb-1">Admin Profile</h3>
                                <small class="text-muted">Manage your administrator account details</small>
                            </div>
                            <span class="admin-badge">Administrator</span>
                        </div>

                        <form asp-action="Profile" method="post" class="row g-3">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="FullName" />
                            <div class="col-md-6">
                                <label class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Role</label>
                                <input type="text" class="form-control" value="@Model.Role" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Member Since</label>
                                <input type="text" class="form-control" value="@(Model.MemberSince?.ToString("MMM dd, yyyy"))" readonly />
                            </div>
                            <div class="col-12 d-flex admin-cta-row">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Changes</button>
                                <a asp-controller="Admin" asp-action="ChangePassword" class="btn btn-outline-secondary"><i class="fas fa-key"></i> Change Password</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="admin-card h-100">
                    <div class="card-body">
                        <h5 class="mb-2">Account Summary</h5>
                        <div class="text-muted small">Quick view of your admin account</div>
                        <dl class="mt-3 mb-0 small summary-block">
                            <dt class="text-uppercase text-muted">Name</dt>
                            <dd class="mb-3">@Model.FullName</dd>
                            <dt class="text-uppercase text-muted">Email</dt>
                            <dd class="mb-3">@Model.Email</dd>
                            <dt class="text-uppercase text-muted">Role</dt>
                            <dd class="mb-3">@Model.Role</dd>
                            <dt class="text-uppercase text-muted">Member Since</dt>
                            <dd class="mb-0">@(Model.MemberSince?.ToString("MMM dd, yyyy"))</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
