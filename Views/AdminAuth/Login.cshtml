@model Arcade.ViewModels.AdminLoginViewModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arcade Admin</title>
    <link rel="icon" type="image/svg+xml" href="~/images/logo.svg">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@500;600;700;800&display=swap"
        rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Arcade Theme -->
    <link rel="stylesheet" href="~/css/cybercore-theme.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(135deg, #1a1f35 0%, #141829 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }

        .admin-login-container {
            width: 100%;
            max-width: 480px;
            padding: 2rem;
        }

        .admin-login-card {
            background: rgba(26, 31, 53, 0.98);
            border: 1px solid rgba(124, 58, 237, 0.4);
            border-radius: 24px;
            padding: 3rem 2.5rem;
            box-shadow: 0 20px 80px rgba(0, 0, 0, 0.6), 0 0 60px rgba(124, 58, 237, 0.25);
            backdrop-filter: blur(30px);
            position: relative;
            overflow: hidden;
        }

        .admin-login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, rgba(124, 58, 237, 0.8), rgba(6, 182, 212, 0.8), transparent);
        }

        .admin-logo {
            text-align: center;
            margin-bottom: 2rem;
        }

        .admin-logo svg {
            width: 70px;
            height: 70px;
            filter: drop-shadow(0 0 25px rgba(124, 58, 237, 0.7));
            animation: float 3s ease-in-out infinite;
        }

        @@keyframes float {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .admin-logo h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #7c3aed 0%, #6366f1 50%, #06b6d4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 1.2rem 0 0.4rem 0;
            letter-spacing: 1px;
        }

        .admin-logo p {
            color: rgba(255, 255, 255, 0.65);
            font-size: 0.92rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .admin-form-label {
            color: rgba(255, 255, 255, 0.85);
            font-weight: 600;
            font-size: 0.88rem;
            margin-bottom: 0.6rem;
            display: none;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .input-wrapper {
            position: relative;
            width: 100%;
        }

        .form-icon {
            position: absolute;
            left: 1.1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(124, 58, 237, 0.7);
            font-size: 1.1rem;
            z-index: 2;
            pointer-events: none;
        }

        .admin-form-control {
            background: rgba(26, 31, 53, 0.6);
            border: 1px solid rgba(124, 58, 237, 0.35);
            border-radius: 14px;
            color: #fff;
            padding: 1rem 1.2rem 1rem 3.2rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            width: 100%;
            box-sizing: border-box;
            box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .admin-form-control:focus {
            background: rgba(26, 31, 53, 0.8);
            border-color: rgba(124, 58, 237, 0.8);
            box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.15), 0 0 25px rgba(124, 58, 237, 0.3), inset 0 2px 8px rgba(0, 0, 0, 0.3);
            color: #fff;
            outline: none;
        }

        .admin-form-control::placeholder {
            color: rgba(255, 255, 255, 0.35);
        }

        .admin-btn-login {
            width: 100%;
            padding: 1.1rem;
            font-size: 1.05rem;
            font-weight: 600;
            background: linear-gradient(135deg, #7c3aed 0%, #6366f1 50%, #06b6d4 100%);
            background-size: 200% 100%;
            border: none;
            border-radius: 14px;
            color: #fff;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 6px 25px rgba(124, 58, 237, 0.45), inset 0 1px 0 rgba(255, 255, 255, 0.1);
            margin-top: 0.5rem;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .admin-btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .admin-btn-login:hover::before {
            left: 100%;
        }

        .admin-btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 35px rgba(124, 58, 237, 0.65), inset 0 1px 0 rgba(255, 255, 255, 0.15);
            background-position: 100% 0;
        }

        .admin-btn-login:active {
            transform: translateY(-1px);
        }

        .checkbox-container {
            margin: 1.2rem 0 1.5rem 0;
        }

        .admin-checkbox {
            width: 18px;
            height: 18px;
            accent-color: #7c3aed;
            cursor: pointer;
        }

        .admin-checkbox-label {
            color: rgba(255, 255, 255, 0.75);
            font-size: 0.9rem;
            margin-left: 0.6rem;
            cursor: pointer;
            user-select: none;
        }

        .text-danger {
            color: #ef4444 !important;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(220, 38, 38, 0.12) 100%);
            border: 1px solid rgba(239, 68, 68, 0.4);
            border-radius: 14px;
            color: #fecaca;
            padding: 1rem 1.2rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.15), inset 0 1px 0 rgba(255, 255, 255, 0.05);
            font-size: 0.92rem;
            font-weight: 500;
            animation: shakeError 0.5s ease-in-out;
        }

        .alert-danger i {
            color: #f87171;
            font-size: 1.1rem;
            flex-shrink: 0;
        }

        .alert-danger span,
        .alert-danger ul {
            color: #fecaca;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .alert-danger ul li {
            color: #fecaca;
        }

        @@keyframes shakeError {
            0%, 100% { transform: translateX(0); }
            20% { transform: translateX(-8px); }
            40% { transform: translateX(8px); }
            60% { transform: translateX(-5px); }
            80% { transform: translateX(5px); }
        }

        .admin-security-notice {
            margin-top: 2rem;
            padding: 1.2rem 1.5rem;
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.08) 0%, rgba(244, 114, 182, 0.08) 100%);
            border-left: 4px solid #ef4444;
            border-radius: 12px;
            text-align: left;
            box-shadow: 0 2px 10px rgba(239, 68, 68, 0.1);
        }

        .admin-security-notice i {
            color: #ef4444;
            font-size: 1.1rem;
            margin-right: 0.5rem;
            vertical-align: middle;
        }

        .admin-security-notice p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.88rem;
            margin: 0;
            line-height: 1.7;
            display: inline;
        }

        .admin-back-link {
            text-align: center;
            margin-top: 1.8rem;
        }

        .admin-back-link a {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: rgba(124, 58, 237, 0.85);
            text-decoration: none;
            font-size: 0.95rem;
            padding: 0.5rem 0.8rem;
            border-radius: 8px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .admin-back-link a:hover {
            color: #7c3aed;
            background: rgba(124, 58, 237, 0.08);
            transform: translateX(-5px);
        }

        .admin-back-link a i {
            transition: transform 0.3s ease;
        }

        .admin-back-link a:hover i {
            transform: translateX(-3px);
        }
    </style>
</head>

<body>
    <div class="admin-login-container">
        <div class="admin-login-card">
            <div class="admin-logo">
                <svg viewBox="0 0 60 60">
                    <defs>
                        <linearGradient id="adminLogoGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" stop-color="#6366f1" />
                            <stop offset="100%" stop-color="#22d3ee" />
                        </linearGradient>
                    </defs>
                    <polygon points="30,2 55,16 55,44 30,58 5,44 5,16" fill="none" stroke="url(#adminLogoGrad)"
                        stroke-width="2" />
                    <polygon points="30,10 48,20 48,40 30,50 12,40 12,20" fill="none" stroke="url(#adminLogoGrad)"
                        stroke-width="1.5" />
                    <path d="M30,14 L42,42 L38,42 L35,35 L25,35 L22,42 L18,42 Z M30,22 L26,32 L34,32 Z"
                        fill="url(#adminLogoGrad)" />
                </svg>
                <h1>ARCADE ADMIN</h1>
                <p><i class="fas fa-shield-halved"></i> Secure Administration Portal</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <div>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <span>@error.ErrorMessage</span>
                        }
                    </div>
                </div>
            }

            <form method="post" asp-controller="AdminAuth" asp-action="Login"
                asp-route-returnUrl="@ViewData["ReturnUrl"]">
                <div class="form-group">
                    <label class="admin-form-label" asp-for="Email">
                        <span asp-for="Email"></span>
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope form-icon"></i>
                        <input type="email" class="admin-form-control" asp-for="Email" placeholder="admin@arcade.com"
                            autocomplete="username" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="admin-form-label" asp-for="Password">
                        <span asp-for="Password"></span>
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock form-icon"></i>
                        <input type="password" class="admin-form-control" asp-for="Password" placeholder="••••••••"
                            autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="admin-btn-login">
                    <i class="fas fa-sign-in-alt me-2"></i> Access Admin Panel
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>

</html>