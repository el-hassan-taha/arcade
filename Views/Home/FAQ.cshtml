@{
    ViewData["Title"] = "FAQ - الأسئلة الشائعة";
}

<div class="cyber-page-header">
    <h1 class="cyber-title"><i class="fas fa-question-circle"></i> Frequently Asked Questions</h1>
    <p class="cyber-subtitle">الأسئلة الشائعة</p>
</div>

<div class="cyber-content-card">
    <div class="cyber-faq-categories">
        <button class="cyber-faq-cat active" data-category="all">All</button>
        <button class="cyber-faq-cat" data-category="orders">Orders</button>
        <button class="cyber-faq-cat" data-category="shipping">Shipping</button>
        <button class="cyber-faq-cat" data-category="payment">Payment</button>
        <button class="cyber-faq-cat" data-category="returns">Returns</button>
        <button class="cyber-faq-cat" data-category="account">Account</button>
    </div>

    <div class="cyber-faq-list">
        <!-- Orders -->
        <div class="cyber-faq-item" data-category="orders">
            <button class="cyber-faq-question">
                <span>How do I place an order?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>To place an order:</p>
                <ol>
                    <li>Browse our products and add items to your cart</li>
                    <li>Click on the cart icon to review your items</li>
                    <li>Proceed to checkout and enter your shipping details</li>
                    <li>Choose your payment method and complete the order</li>
                </ol>
            </div>
        </div>

        <div class="cyber-faq-item" data-category="orders">
            <button class="cyber-faq-question">
                <span>Can I modify or cancel my order?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>You can modify or cancel your order within 1 hour of placing it. After that, the order enters
                    processing and cannot be changed. Please contact our customer service immediately if you need to
                    make changes.</p>
            </div>
        </div>

        <div class="cyber-faq-item" data-category="orders">
            <button class="cyber-faq-question">
                <span>How can I track my order?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>You can track your order by:</p>
                <ul>
                    <li>Logging into your account and visiting <a asp-controller="Order" asp-action="History">Order
                            History</a></li>
                    <li>Using the tracking link sent to your email/SMS</li>
                    <li>Contacting our customer service with your order number</li>
                </ul>
            </div>
        </div>

        <!-- Shipping -->
        <div class="cyber-faq-item" data-category="shipping">
            <button class="cyber-faq-question">
                <span>What are the shipping options and costs?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>We offer the following shipping options:</p>
                <ul>
                    <li><strong>Express Delivery:</strong> EGP 75 (1-2 business days)</li>
                    <li><strong>Standard Delivery:</strong> EGP 45 (3-5 business days)</li>
                    <li><strong>Free Shipping:</strong> On orders over EGP 5,000</li>
                </ul>
                <p>For more details, visit our <a asp-controller="Home" asp-action="Shipping">Shipping Information</a>
                    page.</p>
            </div>
        </div>

        <div class="cyber-faq-item" data-category="shipping">
            <button class="cyber-faq-question">
                <span>Do you deliver to all Egyptian governorates?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>Yes! We deliver to all Egyptian governorates. Delivery times vary by location:</p>
                <ul>
                    <li>Greater Cairo: 1-3 days</li>
                    <li>Delta Region: 2-4 days</li>
                    <li>Upper Egypt: 4-6 days</li>
                    <li>Coastal Cities: 3-5 days</li>
                </ul>
            </div>
        </div>

        <!-- Payment -->
        <div class="cyber-faq-item" data-category="payment">
            <button class="cyber-faq-question">
                <span>What payment methods do you accept?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>We accept the following payment methods:</p>
                <ul>
                    <li>Credit/Debit Cards (Visa, MasterCard)</li>
                    <li>Mobile Wallets (Vodafone Cash, Orange Money, Etisalat Cash)</li>
                    <li>Cash on Delivery (COD) - EGP 15 additional fee</li>
                    <li>Bank Transfer</li>
                    <li>Fawry</li>
                </ul>
            </div>
        </div>

        <div class="cyber-faq-item" data-category="payment">
            <button class="cyber-faq-question">
                <span>Is it safe to pay online?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>Absolutely! We use industry-standard SSL encryption for all transactions. Your payment information is
                    processed securely and is never stored on our servers. We partner with trusted payment processors to
                    ensure your data is protected.</p>
            </div>
        </div>

        <div class="cyber-faq-item" data-category="payment">
            <button class="cyber-faq-question">
                <span>Do you offer installment plans?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>Yes! We offer installment plans through select banks and providers:</p>
                <ul>
                    <li>0% interest installments up to 12 months with select bank cards</li>
                    <li>ValU - up to 24 months</li>
                    <li>Contact us for more installment options</li>
                </ul>
            </div>
        </div>

        <!-- Returns -->
        <div class="cyber-faq-item" data-category="returns">
            <button class="cyber-faq-question">
                <span>What is your return policy?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>We offer a 14-day return policy. Items must be unused, in original packaging, with all accessories
                    and documentation. For complete details, visit our <a asp-controller="Home"
                        asp-action="Returns">Returns Policy</a> page.</p>
            </div>
        </div>

        <div class="cyber-faq-item" data-category="returns">
            <button class="cyber-faq-question">
                <span>How long does a refund take?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>Once we receive and inspect your return:</p>
                <ul>
                    <li>Credit/Debit Cards: 5-10 business days</li>
                    <li>Mobile Wallets: 3-5 business days</li>
                    <li>Bank Transfer: 5-7 business days</li>
                </ul>
            </div>
        </div>

        <!-- Account -->
        <div class="cyber-faq-item" data-category="account">
            <button class="cyber-faq-question">
                <span>How do I create an account?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>Click on the user icon in the navigation bar and select "Register". Fill in your details including
                    name, email, phone number, and create a password. You'll receive a confirmation email to verify your
                    account.</p>
            </div>
        </div>

        <div class="cyber-faq-item" data-category="account">
            <button class="cyber-faq-question">
                <span>I forgot my password. What should I do?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>Click on "Login" and then "Forgot Password". Enter your email address, and we'll send you a link to
                    reset your password. The link is valid for 24 hours.</p>
            </div>
        </div>

        <div class="cyber-faq-item" data-category="account">
            <button class="cyber-faq-question">
                <span>How do I update my account information?</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="cyber-faq-answer">
                <p>Log into your account and go to your <a asp-controller="Account" asp-action="Profile">Profile</a>
                    page. From there, you can update your personal information, change your password, and manage your
                    addresses.</p>
            </div>
        </div>
    </div>

    <div class="cyber-contact-box">
        <h3><i class="fas fa-headset"></i> Still Have Questions?</h3>
        <p>Our customer service team is ready to help you:</p>
        <div class="cyber-contact-buttons">
            <a href="mailto:support@arcade.com" class="cyber-btn cyber-btn-primary">
                <i class="fas fa-envelope"></i> Email Us
            </a>
            <a href="tel:+201234567890" class="cyber-btn cyber-btn-secondary">
                <i class="fas fa-phone"></i> Call Us
            </a>
        </div>
        <p class="cyber-contact-hours">Available Sunday - Thursday, 9 AM - 6 PM</p>
    </div>
</div>

<style>
    .cyber-page-header {
        text-align: center;
        margin-bottom: 2rem;
        padding: 2rem;
        background: var(--arcade-gradient-surface);
        border-radius: var(--arcade-radius-xl);
        border: 1px solid var(--arcade-border);
    }

    .cyber-page-header .cyber-title {
        font-size: 2.5rem;
        background: var(--arcade-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
    }

    .cyber-page-header .cyber-subtitle {
        color: var(--arcade-text-secondary);
        font-size: 1.1rem;
    }

    .cyber-content-card {
        background: var(--arcade-surface);
        border-radius: var(--arcade-radius-xl);
        border: 1px solid var(--arcade-border);
        padding: 2rem;
    }

    .cyber-faq-categories {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--arcade-border);
    }

    .cyber-faq-cat {
        padding: 0.5rem 1rem;
        background: var(--arcade-bg-alt);
        border: 1px solid var(--arcade-border);
        border-radius: 50px;
        color: var(--arcade-text-secondary);
        font-size: 0.9rem;
        cursor: pointer;
        transition: all var(--arcade-transition);
    }

    .cyber-faq-cat:hover {
        border-color: var(--arcade-primary);
        color: var(--arcade-primary);
    }

    .cyber-faq-cat.active {
        background: var(--arcade-gradient);
        border-color: transparent;
        color: #fff;
    }

    .cyber-faq-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .cyber-faq-item {
        border: 1px solid var(--arcade-border);
        border-radius: var(--arcade-radius);
        overflow: hidden;
        transition: all var(--arcade-transition);
    }

    .cyber-faq-item:hover {
        border-color: var(--arcade-primary);
    }

    .cyber-faq-item.hidden {
        display: none;
    }

    .cyber-faq-question {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.25rem;
        background: var(--arcade-bg-alt);
        border: none;
        color: var(--arcade-text);
        font-size: 1rem;
        font-weight: 500;
        text-align: left;
        cursor: pointer;
        transition: all var(--arcade-transition);
    }

    .cyber-faq-question:hover {
        background: var(--arcade-surface-hover);
    }

    .cyber-faq-question i {
        color: var(--arcade-primary);
        transition: transform 0.3s ease;
    }

    .cyber-faq-item.open .cyber-faq-question i {
        transform: rotate(180deg);
    }

    .cyber-faq-answer {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
    }

    .cyber-faq-item.open .cyber-faq-answer {
        max-height: 500px;
    }

    .cyber-faq-answer>* {
        padding: 0 1.25rem;
        color: var(--arcade-text-secondary);
    }

    .cyber-faq-answer>*:first-child {
        padding-top: 1rem;
    }

    .cyber-faq-answer>*:last-child {
        padding-bottom: 1rem;
    }

    .cyber-faq-answer ul,
    .cyber-faq-answer ol {
        padding-left: 2.5rem;
    }

    .cyber-faq-answer li {
        margin-bottom: 0.5rem;
    }

    .cyber-faq-answer a {
        color: var(--arcade-accent);
    }

    .cyber-contact-box {
        text-align: center;
        padding: 2rem;
        background: var(--arcade-bg-alt);
        border-radius: var(--arcade-radius-lg);
        border: 1px solid var(--arcade-border);
        margin-top: 2rem;
    }

    .cyber-contact-box h3 {
        margin-bottom: 0.5rem;
        color: var(--arcade-text);
    }

    .cyber-contact-box p {
        margin-bottom: 1rem;
        color: var(--arcade-text-secondary);
    }

    .cyber-contact-hours {
        margin-top: 1rem;
        font-size: 0.9rem;
        color: var(--arcade-text-muted);
    }

    .cyber-contact-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .cyber-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: var(--arcade-radius);
        font-weight: 600;
        text-decoration: none;
        transition: all var(--arcade-transition);
    }

    .cyber-btn-primary {
        background: var(--arcade-gradient);
        color: #fff;
    }

    .cyber-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: var(--arcade-shadow-glow);
        color: #fff;
    }

    .cyber-btn-secondary {
        background: var(--arcade-surface);
        border: 1px solid var(--arcade-border);
        color: var(--arcade-text);
    }

    .cyber-btn-secondary:hover {
        border-color: var(--arcade-primary);
        color: var(--arcade-primary);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // FAQ accordion
        const faqItems = document.querySelectorAll('.cyber-faq-item');
        faqItems.forEach(item => {
            const question = item.querySelector('.cyber-faq-question');
            question.addEventListener('click', () => {
                const isOpen = item.classList.contains('open');
                // Close all items
                faqItems.forEach(i => i.classList.remove('open'));
                // Open clicked item if it was closed
                if (!isOpen) {
                    item.classList.add('open');
                }
            });
        });

        // Category filter
        const catButtons = document.querySelectorAll('.cyber-faq-cat');
        catButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const category = btn.dataset.category;

                // Update active button
                catButtons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');

                // Filter items
                faqItems.forEach(item => {
                    if (category === 'all' || item.dataset.category === category) {
                        item.classList.remove('hidden');
                    } else {
                        item.classList.add('hidden');
                    }
                });
            });
        });
    });
</script>