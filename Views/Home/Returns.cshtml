        border-radius: var(--arcade-radius);
        border: 1px solid var(--arcade-border);
    }

    .cyber-step-number {
        width: 40px;
        height: 40px;
        background: var(--arcade-gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #fff;
        flex-shrink: 0;
    }

    .cyber-step-content h4 {
        margin: 0 0 0.25rem;
        color: var(--arcade-text);
    }

    .cyber-step-content p {
        margin: 0;
        color: var(--arcade-text-secondary);
        font-size: 0.9rem;
    }

    .cyber-contact-box {
        text-align: center;
        padding: 2rem;
        background: var(--arcade-bg-alt);
        border-radius: var(--arcade-radius-lg);
        border: 1px solid var(--arcade-border);
        margin-top: 2rem;
    }

    .cyber-contact-box h3 {
        margin-bottom: 0.5rem;
        color: var(--arcade-text);
    }

    .cyber-contact-box p {
        margin-bottom: 1.5rem;
        color: var(--arcade-text-secondary);
    }

    .cyber-contact-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .cyber-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: var(--arcade-radius);
        font-weight: 600;
        text-decoration: none;
        transition: all var(--arcade-transition);
    }

    .cyber-btn-primary {
        background: var(--arcade-gradient);
        color: #fff;
    }

    .cyber-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: var(--arcade-shadow-glow);
        color: #fff;
    }

    .cyber-btn-secondary {
        background: var(--arcade-surface);
        border: 1px solid var(--arcade-border);
        color: var(--arcade-text);
    }

    .cyber-btn-secondary:hover {
        border-color: var(--arcade-primary);
        color: var(--arcade-primary);
    }
</style>