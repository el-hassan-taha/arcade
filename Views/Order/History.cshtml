@model Arcade.ViewModels.OrderHistoryViewModel
@{
    ViewData["Title"] = "Order History";
}

<style>
    .order-history-header {
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(34, 211, 238, 0.05));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(99, 102, 241, 0.2);
    }
    
    .order-history-header h1 {
        font-family: 'Poppins', sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        color: #e2e8f0;
        margin: 0;
    }
    
    .order-history-header h1 i {
        background: linear-gradient(135deg, #6366f1, #22d3ee);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-right: 0.75rem;
    }
    
    .order-history-stats {
        display: flex;
        gap: 2rem;
        margin-top: 1rem;
    }
    
    .order-history-stat {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #94a3b8;
        font-size: 0.9rem;
    }
    
    .order-history-stat i { color: #22d3ee; }
    
    .order-card {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.7), rgba(15, 23, 42, 0.9));
        border: 1px solid rgba(99, 102, 241, 0.15);
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }
    
    .order-card:hover {
        border-color: rgba(99, 102, 241, 0.4);
        box-shadow: 0 8px 30px rgba(99, 102, 241, 0.15);
        transform: translateY(-2px);
    }
    
    .order-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem 1.5rem;
        background: rgba(99, 102, 241, 0.05);
        border-bottom: 1px solid rgba(99, 102, 241, 0.1);
    }
    
    .order-number {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        font-size: 1.1rem;
        color: #e2e8f0;
    }
    
    .order-number span { color: #22d3ee; }
    
    .order-date {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #64748b;
        font-size: 0.9rem;
    }
    
    .order-status-badge {
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .order-status-badge.pending { background: rgba(245, 158, 11, 0.2); color: #fbbf24; border: 1px solid rgba(245, 158, 11, 0.3); }
    .order-status-badge.processing { background: rgba(59, 130, 246, 0.2); color: #60a5fa; border: 1px solid rgba(59, 130, 246, 0.3); }
    .order-status-badge.shipped { background: rgba(168, 85, 247, 0.2); color: #c084fc; border: 1px solid rgba(168, 85, 247, 0.3); }
    .order-status-badge.delivered { background: rgba(16, 185, 129, 0.2); color: #34d399; border: 1px solid rgba(16, 185, 129, 0.3); }
    .order-status-badge.cancelled { background: rgba(239, 68, 68, 0.2); color: #f87171; border: 1px solid rgba(239, 68, 68, 0.3); }
    
    .order-card-body {
        padding: 1.5rem;
    }
    
    .order-items-preview {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1.25rem;
    }
    
    .order-item-thumb {
        width: 60px;
        height: 60px;
        background: rgba(99, 102, 241, 0.1);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border: 1px solid rgba(99, 102, 241, 0.2);
    }
    
    .order-item-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .order-item-thumb i {
        font-size: 1.5rem;
        color: #64748b;
    }
    
    .order-more-items {
        width: 60px;
        height: 60px;
        background: rgba(99, 102, 241, 0.15);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #818cf8;
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .order-card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid rgba(99, 102, 241, 0.1);
    }
    
    .order-summary {
        display: flex;
        gap: 2rem;
    }
    
    .order-summary-item {
        display: flex;
        flex-direction: column;
    }
    
    .order-summary-label {
        font-size: 0.75rem;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .order-summary-value {
        font-family: 'Poppins', sans-serif;
        font-size: 1.25rem;
        font-weight: 700;
        color: #e2e8f0;
    }
    
    .order-summary-value.price { color: #22d3ee; }
    
    .order-actions {
        display: flex;
        gap: 0.75rem;
    }
    
    .empty-orders {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.5), rgba(15, 23, 42, 0.7));
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 20px;
        padding: 4rem 2rem;
        text-align: center;
    }
    
    .empty-orders-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.2), rgba(34, 211, 238, 0.1));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }
    
    .empty-orders-icon i {
        font-size: 2.5rem;
        background: linear-gradient(135deg, #6366f1, #22d3ee);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .empty-orders h3 {
        font-family: 'Poppins', sans-serif;
        font-size: 1.5rem;
        font-weight: 600;
        color: #e2e8f0;
        margin-bottom: 0.75rem;
    }
    
    .empty-orders p {
        color: #94a3b8;
        max-width: 400px;
        margin: 0 auto 1.5rem;
    }
    
    .order-pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 2rem;
    }
    
    .order-pagination .page-link {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(30, 41, 59, 0.8);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 8px;
        color: #94a3b8;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .order-pagination .page-link:hover {
        background: rgba(99, 102, 241, 0.2);
        border-color: rgba(99, 102, 241, 0.4);
        color: #e2e8f0;
    }
    
    .order-pagination .page-item.active .page-link {
        background: linear-gradient(135deg, #6366f1, #4f46e5);
        border-color: transparent;
        color: white;
    }
</style>

<div class="container py-4">
    <div class="order-history-header">
        <h1><i class="fas fa-history"></i>Order History</h1>
        @if (Model.Orders != null && Model.Orders.Any())
        {
            <div class="order-history-stats">
                <div class="order-history-stat">
                    <i class="fas fa-shopping-bag"></i>
                    <span>@Model.Orders.Count() Orders</span>
                </div>
                <div class="order-history-stat">
                    <i class="fas fa-check-circle"></i>
                    <span>@Model.Orders.Count(o => o.Status == "Delivered") Delivered</span>
                </div>
            </div>
        }
    </div>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="order-cards">
            @foreach (var order in Model.Orders)
            {
                <div class="order-card">
                    <div class="order-card-header">
                        <div>
                            <div class="order-number">Order <span>#@order.OrderNumber</span></div>
                            <div class="order-date">
                                <i class="fas fa-calendar-alt"></i>
                                @order.OrderDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                            </div>
                        </div>
                        <span class="order-status-badge @order.Status.ToLower()">
                            @order.Status
                        </span>
                    </div>
                    <div class="order-card-body">
                        <div class="order-items-preview">
                            @{
                                var displayItems = order.Items?.Take(4).ToList() ?? new List<Arcade.ViewModels.OrderItemSummaryViewModel>();
                                var remainingCount = (order.Items?.Count() ?? 0) - 4;
                            }
                            @foreach (var item in displayItems)
                            {
                                <div class="order-item-thumb">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.ProductName" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-box"></i>
                                    }
                                </div>
                            }
                            @if (remainingCount > 0)
                            {
                                <div class="order-more-items">+@remainingCount</div>
                            }
                        </div>
                        <div class="order-card-footer">
                            <div class="order-summary">
                                <div class="order-summary-item">
                                    <span class="order-summary-label">Items</span>
                                    <span class="order-summary-value">@order.TotalItems</span>
                                </div>
                                <div class="order-summary-item">
                                    <span class="order-summary-label">Total</span>
                                    <span class="order-summary-value price">@order.Total.ToString("N0") EGP</span>
                                </div>
                            </div>
                            <div class="order-actions">
                                <a asp-action="Details" asp-route-id="@order.OrderId" class="cyber-btn cyber-btn-primary">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="order-pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <div class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="History" asp-route-page="@i">@i</a>
                    </div>
                }
            </nav>
        }
    }
    else
    {
        <div class="empty-orders">
            <div class="empty-orders-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <h3>No Orders Yet</h3>
            <p>You haven't placed any orders yet. Start shopping to see your order history here!</p>
            <a asp-controller="Product" asp-action="Index" class="cyber-btn cyber-btn-primary cyber-btn-lg">
                <i class="fas fa-shopping-bag"></i> Start Shopping
            </a>
        </div>
    }
</div>
