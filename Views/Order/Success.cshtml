@model Arcade.ViewModels.OrderSuccessViewModel
@{
    ViewData["Title"] = "Order Confirmed";
    var totalItems = Model.Items?.Sum(i => i.Quantity) ?? 0;
    var estimatedDelivery = DateTime.Now.AddDays(4);
}

<style>
    /* Enhanced Success Page Styles */
    .success-page-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 0;
    }
    
    /* Celebration Animation Container */
    .celebration-container {
        position: relative;
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
    }
    
    /* Confetti Animation */
    .confetti {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }
    
    .confetti-piece {
        position: absolute;
        width: 10px;
        height: 20px;
        top: -20px;
        animation: confettiFall 5s ease-in-out infinite;
    }
    
    @@keyframes confettiFall {
        0% {
            transform: translateY(-20px) rotate(0deg);
            opacity: 1;
        }
        100% {
            transform: translateY(300px) rotate(720deg);
            opacity: 0;
        }
    }
    
    /* Success Circle */
    .success-icon-wrapper {
        position: relative;
        z-index: 10;
    }
    
    .success-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--arcade-success), #00cc6a);
        display: flex;
        align-items: center;
        justify-content: center;
        animation: successBounce 0.6s ease-out, successPulse 2s ease-in-out 0.6s infinite;
        box-shadow: 0 0 40px rgba(0, 255, 136, 0.5);
    }
    
    @@keyframes successBounce {
        0% { transform: scale(0); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
    }
    
    @@keyframes successPulse {
        0%, 100% { box-shadow: 0 0 40px rgba(0, 255, 136, 0.5); }
        50% { box-shadow: 0 0 60px rgba(0, 255, 136, 0.8); }
    }
    
    .success-circle i {
        font-size: 3.5rem;
        color: #000;
        animation: checkDraw 0.5s ease-out 0.3s both;
    }
    
    @@keyframes checkDraw {
        0% { opacity: 0; transform: scale(0); }
        100% { opacity: 1; transform: scale(1); }
    }
    
    /* Rings Animation */
    .success-rings {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    
    .ring {
        position: absolute;
        border: 2px solid var(--arcade-success);
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation: ringExpand 2s ease-out infinite;
    }
    
    .ring-1 { width: 150px; height: 150px; animation-delay: 0s; }
    .ring-2 { width: 200px; height: 200px; animation-delay: 0.5s; }
    .ring-3 { width: 250px; height: 250px; animation-delay: 1s; }
    
    @@keyframes ringExpand {
        0% { transform: translate(-50%, -50%) scale(0.8); opacity: 1; }
        100% { transform: translate(-50%, -50%) scale(1.5); opacity: 0; }
    }
    
    /* Title Section */
    .success-title {
        font-size: 2.5rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, var(--arcade-success), var(--arcade-primary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: titleFadeIn 0.6s ease-out 0.5s both;
    }
    
    @@keyframes titleFadeIn {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }
    
    .success-subtitle {
        text-align: center;
        font-size: 1.2rem;
        color: var(--arcade-text-muted);
        margin-bottom: 2rem;
        animation: titleFadeIn 0.6s ease-out 0.7s both;
    }
    
    /* Order Number Badge */
    .order-number-badge {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(139, 0, 255, 0.1));
        border: 2px solid var(--arcade-primary);
        border-radius: 16px;
        padding: 1.5rem 2rem;
        text-align: center;
        margin: 0 auto 2rem;
        max-width: 400px;
        animation: slideUp 0.6s ease-out 0.8s both;
    }
    
    @@keyframes slideUp {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }
    
    .order-number-label {
        font-size: 0.9rem;
        color: var(--arcade-text-muted);
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 0.5rem;
    }
    
    .order-number-value {
        font-size: 2rem;
        font-weight: 800;
        color: var(--arcade-primary);
        font-family: 'Courier New', monospace;
    }
    
    /* Email Notification */
    .email-notification {
        background: rgba(0, 255, 136, 0.1);
        border: 1px solid rgba(0, 255, 136, 0.3);
        border-radius: 12px;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        animation: slideUp 0.6s ease-out 0.9s both;
    }
    
    .email-notification i {
        font-size: 1.5rem;
        color: var(--arcade-success);
    }
    
    .email-notification p {
        margin: 0;
        color: var(--arcade-success);
    }
    
    /* Order Details Grid */
    .order-details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
        animation: slideUp 0.6s ease-out 1s both;
    }
    
    .detail-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .detail-card:hover {
        border-color: var(--arcade-primary);
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 212, 255, 0.1);
    }
    
    .detail-card-header {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.05), rgba(139, 0, 255, 0.05));
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .detail-card-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        display: flex;
        align-items: center;
        justify-content: center;
        color: #000;
    }
    
    .detail-card-title {
        font-weight: 600;
        font-size: 1rem;
        margin: 0;
    }
    
    .detail-card-body {
        padding: 1.25rem;
    }
    
    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--arcade-border);
    }
    
    .detail-row:last-child {
        border-bottom: none;
    }
    
    .detail-row .label {
        color: var(--arcade-text-muted);
    }
    
    .detail-row .value {
        font-weight: 600;
    }
    
    .detail-row .value.highlight {
        color: var(--arcade-primary);
        font-size: 1.1rem;
    }
    
    /* Items Preview */
    .items-preview {
        animation: slideUp 0.6s ease-out 1.1s both;
    }
    
    .items-preview-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 2rem;
    }
    
    .items-preview-header {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.05), rgba(139, 0, 255, 0.05));
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .items-preview-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 600;
    }
    
    .items-preview-title i {
        color: var(--arcade-primary);
    }
    
    .items-count {
        background: var(--arcade-primary);
        color: #000;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }
    
    .items-list {
        padding: 1rem 1.25rem;
        max-height: 250px;
        overflow-y: auto;
    }
    
    .item-row {
        display: flex;
        gap: 1rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--arcade-border);
    }
    
    .item-row:last-child {
        border-bottom: none;
    }
    
    .item-image {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        object-fit: cover;
        border: 1px solid var(--arcade-border);
    }
    
    .item-info {
        flex: 1;
    }
    
    .item-name {
        font-weight: 600;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .item-qty {
        color: var(--arcade-text-muted);
        font-size: 0.9rem;
    }
    
    .item-price {
        font-weight: 700;
        color: var(--arcade-primary);
        white-space: nowrap;
    }
    
    /* Timeline Preview */
    .timeline-preview {
        background: rgba(0, 212, 255, 0.05);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        animation: slideUp 0.6s ease-out 1.2s both;
    }
    
    .timeline-preview-title {
        font-weight: 600;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .timeline-preview-title i {
        color: var(--arcade-primary);
    }
    
    .timeline-steps {
        display: flex;
        justify-content: space-between;
        position: relative;
    }
    
    .timeline-steps::before {
        content: '';
        position: absolute;
        top: 20px;
        left: 40px;
        right: 40px;
        height: 3px;
        background: var(--arcade-border);
    }
    
    .timeline-step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 1;
    }
    
    .timeline-step-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--arcade-bg);
        border: 3px solid var(--arcade-border);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
    }
    
    .timeline-step.active .timeline-step-icon {
        background: var(--arcade-success);
        border-color: var(--arcade-success);
        color: #000;
    }
    
    .timeline-step.current .timeline-step-icon {
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        border-color: var(--arcade-primary);
        color: #000;
        animation: currentPulse 2s ease-in-out infinite;
    }
    
    @@keyframes currentPulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(0, 212, 255, 0.4); }
        50% { box-shadow: 0 0 0 10px rgba(0, 212, 255, 0); }
    }
    
    .timeline-step-label {
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
        text-align: center;
    }
    
    .timeline-step.active .timeline-step-label,
    .timeline-step.current .timeline-step-label {
        color: var(--arcade-text);
        font-weight: 500;
    }
    
    /* Action Buttons */
    .success-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 2rem;
        animation: slideUp 0.6s ease-out 1.3s both;
    }
    
    .action-btn {
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .action-btn-primary {
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        color: #000;
        border: none;
    }
    
    .action-btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(0, 212, 255, 0.3);
        color: #000;
    }
    
    .action-btn-outline {
        background: transparent;
        border: 2px solid var(--arcade-border);
        color: var(--arcade-text);
    }
    
    .action-btn-outline:hover {
        border-color: var(--arcade-primary);
        color: var(--arcade-primary);
        transform: translateY(-3px);
    }
    
    /* Help Section */
    .help-section {
        text-align: center;
        animation: slideUp 0.6s ease-out 1.5s both;
    }
    
    .help-section p {
        color: var(--arcade-text-muted);
        margin-bottom: 0.5rem;
    }
    
    .help-link {
        color: var(--arcade-primary);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
    }
    
    .help-link:hover {
        text-decoration: underline;
    }
    
    @@media (max-width: 768px) {
        .success-title {
            font-size: 2rem;
        }
        
        .order-number-value {
            font-size: 1.5rem;
        }
        
        .success-actions {
            flex-direction: column;
        }
        
        .action-btn {
            width: 100%;
            justify-content: center;
        }
        
        .timeline-steps::before {
            left: 20px;
            right: 20px;
        }
    }
</style>

<div class="success-page-container">
    <!-- Celebration Animation -->
    <div class="celebration-container">
        <!-- Confetti -->
        <div class="confetti">
            @for (int i = 0; i < 15; i++)
            {
                var left = new Random().Next(0, 100);
                var delay = (i * 0.3);
                var colors = new[] { "#00d4ff", "#8b00ff", "#00ff88", "#ff6b35", "#ffd700" };
                var color = colors[i % colors.Length];
                <div class="confetti-piece" style="left: @(left)%; animation-delay: @(delay)s; background: @color;"></div>
            }
        </div>
        
        <!-- Success Rings -->
        <div class="success-rings">
            <div class="ring ring-1"></div>
            <div class="ring ring-2"></div>
            <div class="ring ring-3"></div>
        </div>
        
        <!-- Success Icon -->
        <div class="success-icon-wrapper">
            <div class="success-circle">
                <i class="fas fa-check"></i>
            </div>
        </div>
    </div>
    
    <!-- Title -->
    <h1 class="success-title">Order Confirmed!</h1>
    <p class="success-subtitle">Thank you for shopping with Arcade</p>
    
    <!-- Order Number -->
    <div class="order-number-badge">
        <div class="order-number-label">Order Number</div>
        <div class="order-number-value">#@Model.OrderNumber</div>
    </div>
    
    <!-- Email Notification -->
    <div class="email-notification">
        <i class="fas fa-envelope-circle-check"></i>
        <p>A confirmation email has been sent to your registered email address with all order details.</p>
    </div>
    
    <!-- Order Details Grid -->
    <div class="order-details-grid">
        <div class="detail-card">
            <div class="detail-card-header">
                <div class="detail-card-icon">
                    <i class="fas fa-box"></i>
                </div>
                <h3 class="detail-card-title">Order Details</h3>
            </div>
            <div class="detail-card-body">
                <div class="detail-row">
                    <span class="label">Order Date</span>
                    <span class="value">@Model.OrderDate.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="detail-row">
                    <span class="label">Total Items</span>
                    <span class="value">@totalItems items</span>
                </div>
                <div class="detail-row">
                    <span class="label">Order Total</span>
                    <span class="value highlight">@Model.TotalAmount.ToString("N0") EGP</span>
                </div>
                <div class="detail-row">
                    <span class="label">Payment Status</span>
                    <span class="cyber-badge cyber-badge-success">Paid</span>
                </div>
            </div>
        </div>
        
        <div class="detail-card">
            <div class="detail-card-header">
                <div class="detail-card-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <h3 class="detail-card-title">Shipping Details</h3>
            </div>
            <div class="detail-card-body">
                <div class="detail-row">
                    <span class="label">Address</span>
                    <span class="value">@Model.Street</span>
                </div>
                <div class="detail-row">
                    <span class="label">City</span>
                    <span class="value">@Model.City</span>
                </div>
                <div class="detail-row">
                    <span class="label">Estimated Delivery</span>
                    <span class="value highlight">@estimatedDelivery.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="detail-row">
                    <span class="label">Shipping Status</span>
                    <span class="cyber-badge cyber-badge-warning">Processing</span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Items Preview -->
    @if (Model.Items != null && Model.Items.Any())
    {
        <div class="items-preview">
            <div class="items-preview-card">
                <div class="items-preview-header">
                    <div class="items-preview-title">
                        <i class="fas fa-shopping-bag"></i>
                        <span>Order Items</span>
                    </div>
                    <span class="items-count">@totalItems items</span>
                </div>
                <div class="items-list">
                    @foreach (var item in Model.Items)
                    {
                        <div class="item-row">
                            <img src="@(item.ProductImageUrl ?? "/images/placeholder.svg")" alt="@item.ProductName" 
                                 class="item-image" onerror="this.onerror=null; this.src='/images/placeholder.svg';">
                            <div class="item-info">
                                <div class="item-name">@item.ProductName</div>
                                <div class="item-qty">Qty: @item.Quantity</div>
                            </div>
                            <div class="item-price">@item.Subtotal.ToString("N0") EGP</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    
    <!-- Timeline Preview -->
    <div class="timeline-preview">
        <div class="timeline-preview-title">
            <i class="fas fa-route"></i>
            Order Progress
        </div>
        <div class="timeline-steps">
            <div class="timeline-step active">
                <div class="timeline-step-icon">
                    <i class="fas fa-check"></i>
                </div>
                <span class="timeline-step-label">Order Placed</span>
            </div>
            <div class="timeline-step current">
                <div class="timeline-step-icon">
                    <i class="fas fa-cog"></i>
                </div>
                <span class="timeline-step-label">Processing</span>
            </div>
            <div class="timeline-step">
                <div class="timeline-step-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <span class="timeline-step-label">Shipped</span>
            </div>
            <div class="timeline-step">
                <div class="timeline-step-icon">
                    <i class="fas fa-home"></i>
                </div>
                <span class="timeline-step-label">Delivered</span>
            </div>
        </div>
    </div>
    
    <!-- Action Buttons -->
    <div class="success-actions">
        <a asp-action="Details" asp-route-id="@Model.OrderId" class="action-btn action-btn-primary">
            <i class="fas fa-eye"></i> View Order Details
        </a>
        <a asp-action="History" class="action-btn action-btn-outline">
            <i class="fas fa-history"></i> Order History
        </a>
        <a asp-controller="Product" asp-action="Index" class="action-btn action-btn-outline">
            <i class="fas fa-shopping-bag"></i> Continue Shopping
        </a>
    </div>
    
    <!-- Help Section -->
    <div class="help-section">
        <p>Questions about your order?</p>
        <a href="mailto:support@arcade-electronics.com" class="help-link">
            <i class="fas fa-headset"></i> Contact Support
        </a>
    </div>
</div>
