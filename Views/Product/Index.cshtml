@model Arcade.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Products";
    var categoryIcons = new Dictionary<string, string>
    {
        { "Laptop", "fa-laptop" }, { "Monitor", "fa-desktop" }, { "RAM", "fa-memory" },
        { "SSD", "fa-hdd" }, { "Mouse", "fa-mouse" }, { "Keyboard", "fa-keyboard" },
        { "CPU", "fa-microchip" }, { "GPU", "fa-bolt" }
    };
}

<div class="cyber-mb-3">
    <h1 class="cyber-heading">
        @if (!string.IsNullOrEmpty(Model.CategoryName))
        {
            var catIcon = categoryIcons.ContainsKey(Model.CategoryName) ? categoryIcons[Model.CategoryName] : "fa-folder";
            <i class="fas @catIcon"></i> @Model.CategoryName
        }
        else
        {
            <i class="fas fa-microchip"></i> <text>All Products</text>
        }
    </h1>
    <p class="cyber-text-dim">@Model.TotalItems products found</p>
</div>

<div class="row">
    <!-- Filters Sidebar -->
    <div class="col-lg-3 mb-4">
        <div class="cyber-filter-panel">
            <div class="cyber-filter-header">
                <h3><i class="fas fa-sliders-h"></i> Filters</h3>
                <a asp-action="Index" class="cyber-filter-clear-btn">
                    <i class="fas fa-times"></i> Clear
                </a>
            </div>
            
            <form asp-action="Index" method="get" class="cyber-filter-form">
                <!-- Categories -->
                <div class="cyber-filter-section">
                    <label class="cyber-filter-label">
                        <i class="fas fa-layer-group"></i> Categories
                    </label>
                    <div class="cyber-filter-categories">
                        <a asp-action="Index" class="cyber-filter-cat-item @(Model.CategoryId == null ? "active" : "")">
                            <span class="cyber-filter-cat-icon"><i class="fas fa-th-large"></i></span>
                            <span class="cyber-filter-cat-name">All Products</span>
                            <span class="cyber-filter-cat-count">@Model.TotalItems</span>
                        </a>
                        @if (Model.Categories != null)
                        {
                            @foreach (var category in Model.Categories)
                            {
                                var iconClass = categoryIcons.ContainsKey(category.CategoryName) ? categoryIcons[category.CategoryName] : "fa-folder";
                                <a asp-action="Index" asp-route-categoryId="@category.CategoryId" 
                                   class="cyber-filter-cat-item @(Model.CategoryId == category.CategoryId ? "active" : "")">
                                    <span class="cyber-filter-cat-icon"><i class="fas @iconClass"></i></span>
                                    <span class="cyber-filter-cat-name">@category.CategoryName</span>
                                    <span class="cyber-filter-cat-count">@category.Products.Count()</span>
                                </a>
                            }
                        }
                    </div>
                </div>

                <!-- Price Range -->
                <div class="cyber-filter-section">
                    <label class="cyber-filter-label">
                        <i class="fas fa-tag"></i> Price Range (EGP)
                    </label>
                    <div class="cyber-filter-price-inputs">
                        <div class="cyber-filter-price-field">
                            <span class="cyber-filter-price-label">Min</span>
                            <input type="number" name="minPrice" value="@Model.MinPrice" class="cyber-filter-input" placeholder="0">
                        </div>
                        <span class="cyber-filter-price-separator">—</span>
                        <div class="cyber-filter-price-field">
                            <span class="cyber-filter-price-label">Max</span>
                            <input type="number" name="maxPrice" value="@Model.MaxPrice" class="cyber-filter-input" placeholder="∞">
                        </div>
                    </div>
                </div>

                <!-- Stock Filter -->
                <div class="cyber-filter-section">
                    <label class="cyber-filter-checkbox">
                        <input type="checkbox" name="inStock" value="true" @(Model.InStockOnly ? "checked" : "")>
                        <span class="cyber-filter-checkmark"></span>
                        <span class="cyber-filter-checkbox-text">
                            <i class="fas fa-check-circle"></i> In Stock Only
                        </span>
                    </label>
                </div>

                @if (Model.CategoryId != null)
                {
                    <input type="hidden" name="categoryId" value="@Model.CategoryId" />
                }

                <button type="submit" class="cyber-filter-apply-btn">
                    <i class="fas fa-check"></i> Apply Filters
                </button>
            </form>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="col-lg-9">
        <!-- Toolbar -->
        <div class="cyber-panel cyber-mb-3" style="padding: 1rem; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
            <span class="cyber-text-dim">
                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1)-@Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems) of @Model.TotalItems
            </span>
            <div class="d-flex align-items-center gap-3">
                <select class="cyber-select" id="sortSelect" onchange="applySort(this.value)" style="width: auto;">
                    <option value="">Sort by</option>
                    @if (Model.SortBy == "name_asc") { <option value="name_asc" selected>Name (A-Z)</option> } else { <option value="name_asc">Name (A-Z)</option> }
                    @if (Model.SortBy == "name_desc") { <option value="name_desc" selected>Name (Z-A)</option> } else { <option value="name_desc">Name (Z-A)</option> }
                    @if (Model.SortBy == "price_asc") { <option value="price_asc" selected>Price (Low-High)</option> } else { <option value="price_asc">Price (Low-High)</option> }
                    @if (Model.SortBy == "price_desc") { <option value="price_desc" selected>Price (High-Low)</option> } else { <option value="price_desc">Price (High-Low)</option> }
                </select>
            </div>
        </div>

        @if (Model.Products != null && Model.Products.Any())
        {
            <div class="cyber-product-grid" id="productsContainer">
                @foreach (var product in Model.Products)
                {
                    <div class="cyber-product-card">
                        <div class="cyber-product-image">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.ProductName" 
                                     loading="lazy" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                <div class="no-image-placeholder" style="display: none;">
                                    <i class="fas fa-image"></i>
                                    <span>No Image</span>
                                </div>
                            }
                            else
                            {
                                <div class="no-image-placeholder">
                                    <i class="fas fa-image"></i>
                                    <span>No Image</span>
                                </div>
                            }
                            <div class="cyber-product-badges">
                                @if (product.IsFeatured)
                                {
                                    <span class="cyber-product-badge cyber-badge-new"><i class="fas fa-star"></i> Featured</span>
                                }
                                @if (!product.IsInStock)
                                {
                                    <span class="cyber-product-badge cyber-badge-sale">Out of Stock</span>
                                }
                                else if (product.IsLowStock)
                                {
                                    <span class="cyber-product-badge cyber-badge-hot"><i class="fas fa-fire"></i> Low</span>
                                }
                            </div>
                            <div class="cyber-product-overlay">
                                <div class="cyber-product-actions">
                                    <a asp-action="Details" asp-route-id="@product.ProductId" class="cyber-product-action" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (product.IsInStock)
                                    {
                                        <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@product.ProductId" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="cyber-product-action" title="Add to Cart">
                                                <i class="fas fa-cart-plus"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="cyber-product-body">
                            <span class="cyber-product-category">@product.Category?.CategoryName</span>
                            <h4 class="cyber-product-title">
                                <a asp-action="Details" asp-route-id="@product.ProductId">@product.ProductName</a>
                            </h4>
                            @if (!string.IsNullOrEmpty(product.ShortDescription))
                            {
                                <p class="cyber-product-description" style="color: var(--cyber-text-dim); font-size: 0.85rem; margin: 0.5rem 0; line-height: 1.4; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">@product.ShortDescription</p>
                            }
                            <div class="cyber-product-price">
                                <span class="cyber-price-current">EGP @product.Price.ToString("N0")</span>
                            </div>
                            <div class="cyber-product-stock">
                                @if (product.IsInStock)
                                {
                                    <span class="cyber-stock-in"><i class="fas fa-check-circle"></i> In Stock</span>
                                }
                                else
                                {
                                    <span class="cyber-stock-out"><i class="fas fa-times-circle"></i> Out of Stock</span>
                                }
                            </div>
                            <div class="cyber-product-footer">
                                <a asp-action="Details" asp-route-id="@product.ProductId" class="cyber-btn cyber-btn-secondary cyber-btn-sm">Details</a>
                                @if (product.IsInStock)
                                {
                                    <form asp-controller="Cart" asp-action="Add" method="post" style="flex: 1;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="cyber-btn cyber-btn-primary cyber-btn-sm" style="width: 100%;">
                                            <i class="fas fa-cart-plus"></i> Add
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="cyber-pagination">
                    @if (Model.HasPreviousPage)
                    {
                        <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-categoryId="@Model.CategoryId" 
                           asp-route-search="@Model.SearchTerm" asp-route-sortBy="@Model.SortBy" class="cyber-page-link">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == 1 || i == Model.TotalPages || (i >= Model.CurrentPage - 2 && i <= Model.CurrentPage + 2))
                        {
                            <a asp-action="Index" asp-route-page="@i" asp-route-categoryId="@Model.CategoryId" 
                               asp-route-search="@Model.SearchTerm" asp-route-sortBy="@Model.SortBy" 
                               class="cyber-page-link @(i == Model.CurrentPage ? "active" : "")">@i</a>
                        }
                        else if (i == Model.CurrentPage - 3 || i == Model.CurrentPage + 3)
                        {
                            <span class="cyber-page-link" style="opacity: 0.5;">...</span>
                        }
                    }
                    @if (Model.HasNextPage)
                    {
                        <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-categoryId="@Model.CategoryId" 
                           asp-route-search="@Model.SearchTerm" asp-route-sortBy="@Model.SortBy" class="cyber-page-link">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    }
                </div>
            }
        }
        else
        {
            <div class="cyber-empty-state">
                <i class="fas fa-search"></i>
                <h3>No Products Found</h3>
                <p>Try adjusting your search or filter criteria</p>
                <a asp-action="Index" class="cyber-btn cyber-btn-primary"><i class="fas fa-th-large"></i> View All</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function applySort(value) {
            const url = new URL(window.location);
            value ? url.searchParams.set('sortBy', value) : url.searchParams.delete('sortBy');
            window.location.href = url.toString();
        }
    </script>
}
