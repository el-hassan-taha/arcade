@model Arcade.ViewModels.AdminInventoryViewModel
@{
    ViewData["Title"] = "Inventory Management";
    Layout = "_AdminLayout";
    var totalStock = Model.Products?.Sum(p => p.StockQuantity) ?? 0;
    var healthPercent = Model.TotalProducts > 0 ? (int)((double)Model.InStockCount / Model.TotalProducts * 100) : 0;
}

<style>
    /* Enhanced Inventory Page Styles */
    .inventory-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .inventory-title-section h1 {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .inventory-title-section h1 i {
        color: var(--arcade-primary);
    }
    
    .inventory-title-section p {
        color: var(--arcade-text-muted);
        margin: 0;
    }
    
    .inventory-header-actions {
        display: flex;
        gap: 0.75rem;
    }
    
    /* Enhanced Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }
    
    @@media (max-width: 1200px) {
        .stats-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
    
    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    .stat-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .stat-card:hover::before {
        opacity: 1;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }
    
    .stat-card.total::before { background: var(--arcade-primary); }
    .stat-card.instock::before { background: var(--arcade-success); }
    .stat-card.low::before { background: var(--arcade-warning); }
    .stat-card.out::before { background: var(--arcade-danger); }
    .stat-card.health::before { background: linear-gradient(90deg, var(--arcade-primary), var(--arcade-accent)); }
    
    .stat-card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
    }
    
    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }
    
    .stat-card.total .stat-icon { background: rgba(0, 212, 255, 0.15); color: var(--arcade-primary); }
    .stat-card.instock .stat-icon { background: rgba(0, 255, 136, 0.15); color: var(--arcade-success); }
    .stat-card.low .stat-icon { background: rgba(255, 193, 7, 0.15); color: var(--arcade-warning); }
    .stat-card.out .stat-icon { background: rgba(255, 68, 68, 0.15); color: var(--arcade-danger); }
    .stat-card.health .stat-icon { background: linear-gradient(135deg, rgba(0, 212, 255, 0.15), rgba(0, 255, 136, 0.15)); color: var(--arcade-primary); }
    
    .stat-card-body {
        display: flex;
        flex-direction: column;
    }
    
    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5rem;
    }
    
    .stat-label {
        font-size: 0.9rem;
        color: var(--arcade-text-muted);
    }
    
    /* Health Gauge */
    .health-gauge {
        width: 100%;
        height: 8px;
        background: var(--arcade-border);
        border-radius: 4px;
        margin-top: 1rem;
        overflow: hidden;
    }
    
    .health-gauge-fill {
        height: 100%;
        border-radius: 4px;
        background: linear-gradient(90deg, var(--arcade-danger), var(--arcade-warning), var(--arcade-success));
        transition: width 0.5s ease;
    }
    
    /* Quick Update Card */
    .quick-update-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        margin-bottom: 2rem;
        overflow: hidden;
    }
    
    .quick-update-header {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(0, 255, 136, 0.05));
        padding: 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .quick-update-header i {
        color: var(--arcade-warning);
        font-size: 1.25rem;
    }
    
    .quick-update-header h3 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
    }
    
    .quick-update-body {
        padding: 1.5rem;
    }
    
    .quick-update-form {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr auto;
        gap: 1rem;
        align-items: end;
    }
    
    @@media (max-width: 768px) {
        .quick-update-form {
            grid-template-columns: 1fr;
        }
    }
    
    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .form-label {
        font-size: 0.85rem;
        color: var(--arcade-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    /* Bulk Update Section */
    .bulk-update-section {
        background: rgba(255, 193, 7, 0.05);
        border-top: 1px solid var(--arcade-border);
        padding: 1.25rem;
    }
    
    .bulk-update-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }
    
    .bulk-update-header h4 {
        margin: 0;
        font-size: 0.95rem;
        color: var(--arcade-warning);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .bulk-update-options {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }
    
    .bulk-option {
        background: var(--arcade-bg);
        border: 1px solid var(--arcade-border);
        border-radius: 8px;
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .bulk-option:hover {
        border-color: var(--arcade-warning);
        color: var(--arcade-warning);
    }
    
    /* Inventory Table Card */
    .inventory-table-card {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        overflow: hidden;
    }
    
    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        background: rgba(0, 0, 0, 0.1);
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .table-header-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .table-header h3 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .table-header h3 i {
        color: var(--arcade-primary);
    }
    
    .filter-tabs {
        display: flex;
        gap: 0.5rem;
    }
    
    .filter-tab {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        border: 1px solid var(--arcade-border);
        background: var(--arcade-bg);
        color: var(--arcade-text-muted);
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .filter-tab:hover {
        border-color: var(--arcade-primary);
        color: var(--arcade-primary);
    }
    
    .filter-tab.active {
        background: var(--arcade-primary);
        border-color: var(--arcade-primary);
        color: #000;
    }
    
    .filter-tab .count {
        background: rgba(0, 0, 0, 0.2);
        padding: 0.15rem 0.5rem;
        border-radius: 10px;
        font-size: 0.75rem;
        margin-left: 0.25rem;
    }
    
    .filter-tab.active .count {
        background: rgba(0, 0, 0, 0.3);
    }
    
    /* Table Styles */
    .inventory-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .inventory-table th {
        padding: 1rem 1.25rem;
        text-align: left;
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--arcade-text-muted);
        background: rgba(0, 0, 0, 0.2);
        border-bottom: 1px solid var(--arcade-border);
    }
    
    .inventory-table td {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--arcade-border);
        vertical-align: middle;
    }
    
    .inventory-table tbody tr {
        transition: all 0.2s ease;
    }
    
    .inventory-table tbody tr:hover {
        background: rgba(0, 212, 255, 0.03);
    }
    
    .inventory-table tbody tr.alert-row {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { background: transparent; }
        50% { background: rgba(255, 68, 68, 0.05); }
    }
    
    /* Product Cell */
    .product-cell {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .product-thumb {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        object-fit: cover;
        border: 1px solid var(--arcade-border);
    }
    
    .product-info {
        flex: 1;
        min-width: 0;
    }
    
    .product-name {
        font-weight: 600;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .product-sku {
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
        font-family: 'Courier New', monospace;
    }
    
    /* Stock Level Visual */
    .stock-level {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .stock-visual {
        flex: 1;
        max-width: 120px;
    }
    
    .stock-bar {
        height: 8px;
        background: var(--arcade-border);
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 0.25rem;
    }
    
    .stock-bar-fill {
        height: 100%;
        border-radius: 4px;
        transition: width 0.3s ease;
    }
    
    .stock-bar-fill.high { background: var(--arcade-success); }
    .stock-bar-fill.medium { background: var(--arcade-warning); }
    .stock-bar-fill.low { background: var(--arcade-danger); }
    
    .stock-label {
        font-size: 0.7rem;
        color: var(--arcade-text-muted);
    }
    
    .stock-number {
        font-weight: 700;
        font-size: 1.25rem;
        min-width: 50px;
        text-align: right;
    }
    
    .stock-number.out { color: var(--arcade-danger); }
    .stock-number.low { color: var(--arcade-warning); }
    .stock-number.ok { color: var(--arcade-success); }
    
    /* Status Badge */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.4rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }
    
    .status-badge.success { background: rgba(0, 255, 136, 0.15); color: var(--arcade-success); }
    .status-badge.warning { background: rgba(255, 193, 7, 0.15); color: var(--arcade-warning); }
    .status-badge.danger { background: rgba(255, 68, 68, 0.15); color: var(--arcade-danger); }
    
    /* Inline Edit */
    .inline-edit-form {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }
    
    .inline-edit-form .stock-input {
        width: 80px;
        text-align: center;
        padding: 0.5rem;
        border-radius: 8px;
    }
    
    .inline-edit-form .save-btn {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        border: none;
        background: var(--arcade-success);
        color: #000;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .inline-edit-form .save-btn:hover {
        transform: scale(1.1);
    }
    
    /* Category Badge */
    .category-badge {
        background: rgba(0, 212, 255, 0.1);
        color: var(--arcade-primary);
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
    }
    
    /* Date */
    .date-small {
        font-size: 0.85rem;
        color: var(--arcade-text-muted);
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }
    
    .empty-state i {
        font-size: 4rem;
        color: var(--arcade-text-muted);
        margin-bottom: 1rem;
    }
    
    /* Alert Banner */
    .alert-banner {
        background: linear-gradient(135deg, rgba(255, 68, 68, 0.1), rgba(255, 193, 7, 0.1));
        border: 1px solid var(--arcade-danger);
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .alert-banner i {
        font-size: 1.5rem;
        color: var(--arcade-danger);
    }
    
    .alert-banner-content {
        flex: 1;
    }
    
    .alert-banner-content strong {
        color: var(--arcade-danger);
    }
    
    .alert-banner-content p {
        margin: 0;
        font-size: 0.9rem;
        color: var(--arcade-text-muted);
    }
</style>

<!-- Header -->
<div class="inventory-header">
    <div class="inventory-title-section">
        <h1><i class="fas fa-warehouse"></i> Inventory Management</h1>
        <p>Monitor and manage your stock levels across all products</p>
    </div>
    <div class="inventory-header-actions">
        <button type="button" class="cyber-btn cyber-btn-ghost" onclick="window.print()">
            <i class="fas fa-print"></i> Print Report
        </button>
        <button type="button" class="cyber-btn cyber-btn-primary" onclick="exportInventory()">
            <i class="fas fa-download"></i> Export CSV
        </button>
    </div>
</div>

<!-- Alert Banner for Low/Out Stock -->
@if (Model.LowStockCount > 0 || Model.OutOfStockCount > 0)
{
    <div class="alert-banner">
        <i class="fas fa-exclamation-circle"></i>
        <div class="alert-banner-content">
            <strong>Attention Required!</strong>
            <p>You have @Model.OutOfStockCount out of stock and @Model.LowStockCount low stock items that need restocking.</p>
        </div>
        <button type="button" class="cyber-btn cyber-btn-danger cyber-btn-sm" onclick="filterByStock('low')">
            View All <i class="fas fa-arrow-right"></i>
        </button>
    </div>
}

<!-- Stats Grid -->
<div class="stats-grid">
    <div class="stat-card total">
        <div class="stat-card-header">
            <div class="stat-icon">
                <i class="fas fa-boxes"></i>
            </div>
        </div>
        <div class="stat-card-body">
            <div class="stat-value">@Model.TotalProducts</div>
            <div class="stat-label">Total Products</div>
        </div>
    </div>
    
    <div class="stat-card instock">
        <div class="stat-card-header">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
        </div>
        <div class="stat-card-body">
            <div class="stat-value">@Model.InStockCount</div>
            <div class="stat-label">In Stock</div>
        </div>
    </div>
    
    <div class="stat-card low">
        <div class="stat-card-header">
            <div class="stat-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
        </div>
        <div class="stat-card-body">
            <div class="stat-value">@Model.LowStockCount</div>
            <div class="stat-label">Low Stock</div>
        </div>
    </div>
    
    <div class="stat-card out">
        <div class="stat-card-header">
            <div class="stat-icon">
                <i class="fas fa-times-circle"></i>
            </div>
        </div>
        <div class="stat-card-body">
            <div class="stat-value">@Model.OutOfStockCount</div>
            <div class="stat-label">Out of Stock</div>
        </div>
    </div>
    
    <div class="stat-card health">
        <div class="stat-card-header">
            <div class="stat-icon">
                <i class="fas fa-heartbeat"></i>
            </div>
        </div>
        <div class="stat-card-body">
            <div class="stat-value">@healthPercent%</div>
            <div class="stat-label">Stock Health</div>
            <div class="health-gauge">
                <div class="health-gauge-fill" style="width: @healthPercent%"></div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stock Update -->
<div class="quick-update-card">
    <div class="quick-update-header">
        <i class="fas fa-bolt"></i>
        <h3>Quick Stock Update</h3>
    </div>
    <div class="quick-update-body">
        <form asp-action="UpdateStock" method="post" class="quick-update-form">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="form-label">Select Product</label>
                <select name="productId" class="cyber-select" required id="quickProductSelect">
                    <option value="">Choose a product...</option>
                    @if (Model.Products != null)
                    {
                        @foreach (var product in Model.Products.OrderBy(p => p.ProductName))
                        {
                            var stockClass = product.StockQuantity == 0 ? "ðŸ”´" : product.IsLowStock ? "ðŸŸ¡" : "ðŸŸ¢";
                            <option value="@product.ProductId" data-current="@product.StockQuantity">
                                @stockClass @product.ProductName (Current: @product.StockQuantity)
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Current Stock</label>
                <input type="text" class="cyber-input" id="currentStockDisplay" value="-" readonly 
                       style="text-align: center; background: var(--arcade-bg);">
            </div>
            <div class="form-group">
                <label class="form-label">New Quantity</label>
                <input type="number" name="quantity" class="cyber-input" min="0" required 
                       placeholder="Enter new quantity" id="newQuantityInput">
            </div>
            <button type="submit" class="cyber-btn cyber-btn-primary">
                <i class="fas fa-save"></i> Update Stock
            </button>
        </form>
    </div>
    
    <div class="bulk-update-section">
        <div class="bulk-update-header">
            <h4><i class="fas fa-layer-group"></i> Quick Actions</h4>
        </div>
        <div class="bulk-update-options">
            <button type="button" class="bulk-option" onclick="setAllLowStockTo50()">
                <i class="fas fa-plus"></i> Restock all low items to 50
            </button>
            <button type="button" class="bulk-option" onclick="setAllOutOfStockTo25()">
                <i class="fas fa-redo"></i> Restock all out of stock to 25
            </button>
        </div>
    </div>
</div>

<!-- Inventory Table -->
<div class="inventory-table-card">
    <div class="table-header">
        <div class="table-header-left">
            <h3><i class="fas fa-list"></i> Inventory List</h3>
            <span style="color: var(--arcade-text-muted);">@totalStock total units</span>
        </div>
        <div class="filter-tabs">
            <button type="button" class="filter-tab active" data-filter="all">
                All <span class="count">@Model.TotalProducts</span>
            </button>
            <button type="button" class="filter-tab" data-filter="ok">
                In Stock <span class="count">@Model.InStockCount</span>
            </button>
            <button type="button" class="filter-tab" data-filter="low">
                Low Stock <span class="count">@Model.LowStockCount</span>
            </button>
            <button type="button" class="filter-tab" data-filter="out">
                Out of Stock <span class="count">@Model.OutOfStockCount</span>
            </button>
        </div>
    </div>
    
    <div style="overflow-x: auto;">
        <table class="inventory-table" id="inventoryTable">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Stock Level</th>
                    <th>Status</th>
                    <th>Last Updated</th>
                    <th>Update Stock</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products != null && Model.Products.Any())
                {
                    @foreach (var product in Model.Products)
                    {
                        var stockPercent = Math.Min(product.StockQuantity, 100);
                        var stockClass = product.StockQuantity == 0 ? "low" : (product.IsLowStock ? "medium" : "high");
                        var numberClass = product.StockQuantity == 0 ? "out" : (product.IsLowStock ? "low" : "ok");
                        var isAlert = product.StockQuantity == 0;
                        <tr data-stock-status="@(product.StockQuantity == 0 ? "out" : product.IsLowStock ? "low" : "ok")" 
                            class="@(isAlert ? "alert-row" : "")">
                            <td>
                                <div class="product-cell">
                                    <img src="@(product.ImageUrl ?? "/images/placeholder.svg")" alt="@product.ProductName"
                                        class="product-thumb" onerror="this.onerror=null; this.src='/images/placeholder.svg';">
                                    <div class="product-info">
                                        <div class="product-name">@product.ProductName</div>
                                        <div class="product-sku">SKU: PRD-@product.ProductId.ToString("D5")</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="category-badge">@product.Category?.CategoryName</span>
                            </td>
                            <td>
                                <div class="stock-level">
                                    <div class="stock-visual">
                                        <div class="stock-bar">
                                            <div class="stock-bar-fill @stockClass" style="width: @stockPercent%"></div>
                                        </div>
                                        <div class="stock-label">
                                            @(product.StockQuantity == 0 ? "Empty" : stockPercent + "% capacity")
                                        </div>
                                    </div>
                                    <div class="stock-number @numberClass">@product.StockQuantity</div>
                                </div>
                            </td>
                            <td>
                                @if (product.StockQuantity == 0)
                                {
                                    <span class="status-badge danger">
                                        <i class="fas fa-times-circle"></i> Out of Stock
                                    </span>
                                }
                                else if (product.IsLowStock)
                                {
                                    <span class="status-badge warning">
                                        <i class="fas fa-exclamation-triangle"></i> Low Stock
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge success">
                                        <i class="fas fa-check-circle"></i> In Stock
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="date-small">
                                    @(product.UpdatedAt?.ToString("MMM dd, yyyy") ?? product.CreatedAt.ToString("MMM dd, yyyy"))
                                </span>
                            </td>
                            <td>
                                <form asp-action="UpdateStock" method="post" class="inline-edit-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="number" name="quantity" value="@product.StockQuantity"
                                        class="cyber-input stock-input" min="0">
                                    <button type="submit" class="save-btn" title="Update Stock">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">
                            <div class="empty-state">
                                <i class="fas fa-box-open"></i>
                                <h3>No products in inventory</h3>
                                <p>Add some products to start managing your inventory</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Filter tabs functionality
        document.querySelectorAll('.filter-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                filterByStock(this.dataset.filter);
            });
        });
        
        function filterByStock(value) {
            const rows = document.querySelectorAll('#inventoryTable tbody tr');
            rows.forEach(row => {
                const status = row.dataset.stockStatus;
                if (value === 'all') {
                    row.style.display = '';
                } else if (value === 'low') {
                    row.style.display = (status === 'low' || status === 'out') ? '' : 'none';
                } else if (value === 'out') {
                    row.style.display = status === 'out' ? '' : 'none';
                } else if (value === 'ok') {
                    row.style.display = status === 'ok' ? '' : 'none';
                }
            });
        }
        
        // Quick product select - show current stock
        document.getElementById('quickProductSelect')?.addEventListener('change', function() {
            const selected = this.options[this.selectedIndex];
            const current = selected.dataset.current || '-';
            document.getElementById('currentStockDisplay').value = current;
            
            // Pre-fill new quantity
            const newInput = document.getElementById('newQuantityInput');
            if (current !== '-') {
                newInput.focus();
            }
        });
        
        // Export functionality
        function exportInventory() {
            let csv = 'Product,Category,Stock,Status,Last Updated\n';
            document.querySelectorAll('#inventoryTable tbody tr').forEach(row => {
                const cells = row.querySelectorAll('td');
                if (cells.length >= 5) {
                    const product = cells[0].querySelector('.product-name')?.textContent?.trim() || '';
                    const category = cells[1].querySelector('.category-badge')?.textContent?.trim() || '';
                    const stock = cells[2].querySelector('.stock-number')?.textContent?.trim() || '';
                    const status = cells[3].querySelector('.status-badge')?.textContent?.trim() || '';
                    const updated = cells[4].querySelector('.date-small')?.textContent?.trim() || '';
                    csv += `"${product}","${category}",${stock},"${status}","${updated}"\n`;
                }
            });
            
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'inventory-report.csv';
            a.click();
        }
        
        // Bulk update placeholders (would need backend support)
        function setAllLowStockTo50() {
            alert('This feature would update all low stock items to 50 units. Please implement the backend action.');
        }
        
        function setAllOutOfStockTo25() {
            alert('This feature would update all out of stock items to 25 units. Please implement the backend action.');
        }
    </script>
}
