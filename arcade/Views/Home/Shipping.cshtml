    }

    .cyber-list {
        list-style: none;
        padding: 0;
    }

    .cyber-list li {
        padding: 0.75rem 0;
        padding-left: 1.5rem;
        position: relative;
        color: var(--arcade-text-secondary);
    }

    .cyber-list li::before {
        content: '▹';
        position: absolute;
        left: 0;
        color: var(--arcade-accent);
    }

    .cyber-list a {
        color: var(--arcade-accent);
    }

    .cyber-delivery-zones {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .cyber-zone {
        background: var(--arcade-bg-alt);
        padding: 1rem;
        border-radius: var(--arcade-radius);
        border: 1px solid var(--arcade-border);
    }

    .cyber-zone h4 {
        margin: 0 0 0.5rem;
        color: var(--arcade-text);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .cyber-zone h4 i {
        color: var(--arcade-primary);
    }

    .cyber-zone p {
        color: var(--arcade-text-muted);
        font-size: 0.85rem;
        margin: 0 0 0.5rem;
    }

    .cyber-zone-time {
        display: inline-block;
        background: var(--arcade-accent-light);
        color: var(--arcade-accent);
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .cyber-contact-box {
        text-align: center;
        padding: 2rem;
        background: var(--arcade-bg-alt);
        border-radius: var(--arcade-radius-lg);
        border: 1px solid var(--arcade-border);
    }

    .cyber-contact-box h3 {
        margin-bottom: 0.5rem;
        color: var(--arcade-text);
    }

    .cyber-contact-box p {
        margin-bottom: 1.5rem;
        color: var(--arcade-text-secondary);
    }

    .cyber-contact-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .cyber-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: var(--arcade-radius);
        font-weight: 600;
        text-decoration: none;
        transition: all var(--arcade-transition);
    }

    .cyber-btn-primary {
        background: var(--arcade-gradient);
        color: #fff;
    }

    .cyber-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: var(--arcade-shadow-glow);
        color: #fff;
    }

    .cyber-btn-secondary {
        background: var(--arcade-surface);
        border: 1px solid var(--arcade-border);
        color: var(--arcade-text);
    }

    .cyber-btn-secondary:hover {
        border-color: var(--arcade-primary);
        color: var(--arcade-primary);
    }
</style>