@model Arcade.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
    var itemCount = Model.Items?.Count() ?? 0;
}

<style>
    /* Enhanced Checkout Styles */
    .checkout-hero {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.1) 0%, rgba(139, 0, 255, 0.1) 100%);
        border: 1px solid var(--arcade-border);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }
    
    .checkout-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--arcade-primary), var(--arcade-accent), var(--arcade-primary));
        animation: gradientFlow 3s ease infinite;
    }
    
    @@keyframes gradientFlow {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }
    
    .checkout-hero h1 {
        font-size: 2rem;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .checkout-hero h1 i {
        color: var(--arcade-primary);
        font-size: 1.5rem;
    }
    
    .checkout-trust-badges {
        display: flex;
        gap: 1.5rem;
        margin-top: 1rem;
        flex-wrap: wrap;
    }
    
    .trust-badge {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        color: var(--arcade-text-muted);
    }
    
    .trust-badge i {
        color: var(--arcade-success);
    }
    
    /* Enhanced Steps */
    .checkout-steps-container {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 12px;
        padding: 1.5rem 2rem;
        margin-bottom: 2rem;
    }
    
    .checkout-steps {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
    }
    
    .checkout-steps::before {
        content: '';
        position: absolute;
        top: 24px;
        left: 60px;
        right: 60px;
        height: 3px;
        background: var(--arcade-border);
        z-index: 0;
    }
    
    .checkout-step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 1;
        flex: 1;
    }
    
    .step-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--arcade-bg);
        border: 3px solid var(--arcade-border);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        position: relative;
    }
    
    .step-circle i {
        font-size: 1.2rem;
    }
    
    .checkout-step.active .step-circle {
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        border-color: var(--arcade-primary);
        color: #000;
        box-shadow: 0 0 20px rgba(0, 212, 255, 0.4);
        animation: stepPulse 2s ease-in-out infinite;
    }
    
    @@keyframes stepPulse {
        0%, 100% { box-shadow: 0 0 20px rgba(0, 212, 255, 0.4); }
        50% { box-shadow: 0 0 30px rgba(0, 212, 255, 0.6); }
    }
    
    .checkout-step.completed .step-circle {
        background: var(--arcade-success);
        border-color: var(--arcade-success);
        color: #fff;
    }
    
    .step-label {
        margin-top: 0.75rem;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--arcade-text-muted);
        transition: color 0.3s ease;
    }
    
    .checkout-step.active .step-label,
    .checkout-step.completed .step-label {
        color: var(--arcade-primary);
    }
    
    .step-sublabel {
        font-size: 0.75rem;
        color: var(--arcade-text-muted);
        margin-top: 0.25rem;
    }
    
    /* Enhanced Cards */
    .checkout-section {
        background: var(--arcade-bg-card);
        border: 1px solid var(--arcade-border);
        border-radius: 12px;
        margin-bottom: 1.5rem;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .checkout-section:hover {
        border-color: var(--arcade-primary);
        box-shadow: 0 0 20px rgba(0, 212, 255, 0.1);
    }
    
    .section-header {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.05) 0%, rgba(139, 0, 255, 0.05) 100%);
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--arcade-border);
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .section-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        display: flex;
        align-items: center;
        justify-content: center;
        color: #000;
        font-size: 1rem;
    }
    
    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
    }
    
    .section-body {
        padding: 1.5rem;
    }
    
    /* Enhanced Form Inputs */
    .form-floating-group {
        position: relative;
        margin-bottom: 1.25rem;
    }
    
    .form-floating-group .cyber-input {
        padding: 1rem;
        height: auto;
        font-size: 1rem;
    }
    
    .form-floating-group .cyber-label {
        margin-bottom: 0.5rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .form-floating-group .cyber-label .required {
        color: var(--arcade-accent);
    }
    
    .input-with-icon {
        position: relative;
    }
    
    .input-with-icon .cyber-input {
        padding-left: 2.75rem;
    }
    
    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--arcade-text-muted);
    }
    
    /* Payment Options Enhanced */
    .payment-methods {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .payment-method {
        position: relative;
        cursor: pointer;
    }
    
    .payment-method input {
        position: absolute;
        opacity: 0;
    }
    
    .payment-method-card {
        background: var(--arcade-bg);
        border: 2px solid var(--arcade-border);
        border-radius: 12px;
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        transition: all 0.3s ease;
    }
    
    .payment-method:hover .payment-method-card {
        border-color: var(--arcade-primary);
    }
    
    .payment-method input:checked + .payment-method-card {
        border-color: var(--arcade-primary);
        background: rgba(0, 212, 255, 0.05);
        box-shadow: 0 0 15px rgba(0, 212, 255, 0.2);
    }
    
    .payment-method-card i {
        font-size: 2rem;
        color: var(--arcade-primary);
    }
    
    .payment-method-card span {
        font-size: 0.9rem;
        font-weight: 500;
    }
    
    .payment-check {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: var(--arcade-primary);
        color: #000;
        display: none;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
    }
    
    .payment-method input:checked ~ .payment-check {
        display: flex;
    }
    
    /* Card Visual */
    .card-visual {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        position: relative;
        overflow: hidden;
    }
    
    .card-visual::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 150px;
        height: 150px;
        background: radial-gradient(circle, rgba(0, 212, 255, 0.2) 0%, transparent 70%);
    }
    
    .card-chip {
        width: 45px;
        height: 35px;
        background: linear-gradient(135deg, #d4af37 0%, #f4d160 50%, #d4af37 100%);
        border-radius: 6px;
        margin-bottom: 1.5rem;
    }
    
    .card-number-display {
        font-family: 'Courier New', monospace;
        font-size: 1.4rem;
        letter-spacing: 4px;
        margin-bottom: 1rem;
        color: #fff;
    }
    
    .card-details-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
    }
    
    .card-holder-label, .card-expiry-label {
        font-size: 0.7rem;
        color: rgba(255,255,255,0.5);
        text-transform: uppercase;
        margin-bottom: 0.25rem;
    }
    
    .card-holder-name, .card-expiry-value {
        font-size: 0.9rem;
        color: #fff;
        text-transform: uppercase;
    }
    
    .card-brand {
        position: absolute;
        bottom: 1.5rem;
        right: 1.5rem;
        font-size: 2.5rem;
        color: #fff;
        opacity: 0.8;
    }
    
    /* Order Summary Enhanced */
    .summary-sticky {
        position: sticky;
        top: 100px;
    }
    
    .summary-card {
        background: var(--arcade-bg-card);
        border: 2px solid var(--arcade-border);
        border-radius: 16px;
        overflow: hidden;
    }
    
    .summary-header {
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        padding: 1.25rem 1.5rem;
        color: #000;
    }
    
    .summary-header h3 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .summary-body {
        padding: 1.5rem;
    }
    
    .summary-items {
        max-height: 300px;
        overflow-y: auto;
        margin-bottom: 1rem;
    }
    
    .summary-item {
        display: flex;
        gap: 1rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--arcade-border);
    }
    
    .summary-item:last-child {
        border-bottom: none;
    }
    
    .summary-item-image {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        object-fit: cover;
        border: 1px solid var(--arcade-border);
    }
    
    .summary-item-details {
        flex: 1;
    }
    
    .summary-item-name {
        font-weight: 600;
        font-size: 0.9rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .summary-item-qty {
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
        margin-top: 0.25rem;
    }
    
    .summary-item-price {
        font-weight: 700;
        color: var(--arcade-primary);
        white-space: nowrap;
    }
    
    .summary-divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--arcade-border), transparent);
        margin: 1rem 0;
    }
    
    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
    }
    
    .summary-row.total {
        font-size: 1.25rem;
        font-weight: 700;
        padding: 1rem 0;
        border-top: 2px solid var(--arcade-primary);
        margin-top: 0.5rem;
    }
    
    .summary-row.total span:last-child {
        color: var(--arcade-primary);
    }
    
    .free-shipping {
        color: var(--arcade-success);
        font-weight: 600;
    }
    
    /* Place Order Button */
    .place-order-btn {
        width: 100%;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 700;
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--arcade-primary), var(--arcade-accent));
        color: #000;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-top: 1.5rem;
        position: relative;
        overflow: hidden;
    }
    
    .place-order-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.5s ease;
    }
    
    .place-order-btn:hover::before {
        left: 100%;
    }
    
    .place-order-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0, 212, 255, 0.3);
    }
    
    /* Security Notice */
    .security-notice {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: rgba(0, 255, 136, 0.1);
        border: 1px solid rgba(0, 255, 136, 0.3);
        border-radius: 8px;
        padding: 0.75rem 1rem;
        margin-top: 1rem;
    }
    
    .security-notice i {
        color: var(--arcade-success);
        font-size: 1.25rem;
    }
    
    .security-notice span {
        font-size: 0.85rem;
        color: var(--arcade-success);
    }
    
    /* Terms */
    .checkout-terms {
        text-align: center;
        font-size: 0.8rem;
        color: var(--arcade-text-muted);
        margin-top: 1rem;
    }
    
    .checkout-terms a {
        color: var(--arcade-primary);
        text-decoration: none;
    }
    
    .checkout-terms a:hover {
        text-decoration: underline;
    }
    
    /* Promo Code */
    .promo-section {
        margin-bottom: 1rem;
    }
    
    .promo-input-group {
        display: flex;
        gap: 0.5rem;
    }
    
    .promo-input-group input {
        flex: 1;
    }
    
    .promo-input-group button {
        padding: 0.5rem 1rem;
        white-space: nowrap;
    }
    
    /* Express Checkout */
    .express-checkout {
        background: rgba(0, 212, 255, 0.05);
        border: 1px dashed var(--arcade-border);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 2rem;
        text-align: center;
    }
    
    .express-checkout-label {
        font-size: 0.85rem;
        color: var(--arcade-text-muted);
        margin-bottom: 1rem;
    }
    
    .express-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .express-btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        border: 1px solid var(--arcade-border);
        background: var(--arcade-bg);
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .express-btn:hover {
        border-color: var(--arcade-primary);
        transform: translateY(-2px);
    }
    
    .express-btn i {
        font-size: 1.25rem;
    }
    
    /* Delivery Estimate */
    .delivery-estimate {
        background: rgba(0, 212, 255, 0.05);
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .delivery-estimate i {
        font-size: 1.5rem;
        color: var(--arcade-primary);
    }
    
    .delivery-estimate-text {
        font-size: 0.9rem;
    }
    
    .delivery-estimate-text strong {
        color: var(--arcade-primary);
    }
    
    @@media (max-width: 768px) {
        .checkout-steps::before {
            left: 40px;
            right: 40px;
        }
        
        .step-circle {
            width: 40px;
            height: 40px;
            font-size: 0.9rem;
        }
        
        .step-label {
            font-size: 0.8rem;
        }
        
        .card-number-display {
            font-size: 1.1rem;
            letter-spacing: 2px;
        }
    }
</style>

<div class="cyber-checkout-page">
    <!-- Hero Section -->
    <div class="checkout-hero">
        <h1>
            <i class="fas fa-shopping-bag"></i>
            Secure Checkout
        </h1>
        <div class="checkout-trust-badges">
            <div class="trust-badge">
                <i class="fas fa-shield-alt"></i>
                <span>SSL Secured</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-lock"></i>
                <span>256-bit Encryption</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-undo"></i>
                <span>Easy Returns</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-headset"></i>
                <span>24/7 Support</span>
            </div>
        </div>
    </div>

    <!-- Checkout Steps -->
    <div class="checkout-steps-container">
        <div class="checkout-steps">
            <div class="checkout-step completed" id="step1">
                <div class="step-circle">
                    <i class="fas fa-check"></i>
                </div>
                <span class="step-label">Cart</span>
                <span class="step-sublabel">@itemCount items</span>
            </div>
            <div class="checkout-step active" id="step2">
                <div class="step-circle">2</div>
                <span class="step-label">Details</span>
                <span class="step-sublabel">Shipping & Payment</span>
            </div>
            <div class="checkout-step" id="step3">
                <div class="step-circle">3</div>
                <span class="step-label">Confirm</span>
                <span class="step-sublabel">Review Order</span>
            </div>
        </div>
    </div>

    <!-- Express Checkout -->
    <div class="express-checkout">
        <div class="express-checkout-label">Express Checkout</div>
        <div class="express-buttons">
            <button type="button" class="express-btn">
                <i class="fab fa-apple"></i> Pay
            </button>
            <button type="button" class="express-btn">
                <i class="fab fa-google"></i> Pay
            </button>
            <button type="button" class="express-btn">
                <i class="fab fa-paypal" style="color: #003087;"></i> PayPal
            </button>
        </div>
    </div>

    <form asp-action="PlaceOrder" method="post" class="cyber-checkout-form">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="cyber-alert cyber-alert-danger"></div>

        <div class="row g-4">
            <!-- Checkout Form -->
            <div class="col-lg-8">
                <!-- Shipping Address -->
                <div class="checkout-section">
                    <div class="section-header">
                        <div class="section-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <h3 class="section-title">Shipping Address</h3>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating-group">
                                    <label asp-for="FirstName" class="cyber-label">
                                        First Name <span class="required">*</span>
                                    </label>
                                    <div class="input-with-icon">
                                        <i class="fas fa-user input-icon"></i>
                                        <input asp-for="FirstName" class="cyber-input" style="padding-left: 2.75rem;" placeholder="Enter first name" />
                                    </div>
                                    <span asp-validation-for="FirstName" class="cyber-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating-group">
                                    <label asp-for="LastName" class="cyber-label">
                                        Last Name <span class="required">*</span>
                                    </label>
                                    <div class="input-with-icon">
                                        <i class="fas fa-user input-icon"></i>
                                        <input asp-for="LastName" class="cyber-input" style="padding-left: 2.75rem;" placeholder="Enter last name" />
                                    </div>
                                    <span asp-validation-for="LastName" class="cyber-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating-group">
                                    <label asp-for="Email" class="cyber-label">
                                        Email Address <span class="required">*</span>
                                    </label>
                                    <div class="input-with-icon">
                                        <i class="fas fa-envelope input-icon"></i>
                                        <input asp-for="Email" class="cyber-input" style="padding-left: 2.75rem;" placeholder="your@email.com" />
                                    </div>
                                    <span asp-validation-for="Email" class="cyber-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating-group">
                                    <label asp-for="Phone" class="cyber-label">
                                        Phone Number <span class="required">*</span>
                                    </label>
                                    <div class="input-with-icon">
                                        <i class="fas fa-phone input-icon"></i>
                                        <input asp-for="Phone" class="cyber-input" style="padding-left: 2.75rem;" placeholder="+20 xxx xxx xxxx" />
                                    </div>
                                    <span asp-validation-for="Phone" class="cyber-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating-group">
                            <label asp-for="ShippingAddress" class="cyber-label">
                                Street Address <span class="required">*</span>
                            </label>
                            <div class="input-with-icon">
                                <i class="fas fa-home input-icon"></i>
                                <input asp-for="ShippingAddress" class="cyber-input" style="padding-left: 2.75rem;" placeholder="Building number, street name, apartment" />
                            </div>
                            <span asp-validation-for="ShippingAddress" class="cyber-validation-error"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-floating-group">
                                    <label asp-for="City" class="cyber-label">
                                        City <span class="required">*</span>
                                    </label>
                                    <div class="input-with-icon">
                                        <i class="fas fa-city input-icon"></i>
                                        <input asp-for="City" class="cyber-input" style="padding-left: 2.75rem;" placeholder="City name" />
                                    </div>
                                    <span asp-validation-for="City" class="cyber-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating-group">
                                    <label asp-for="State" class="cyber-label">
                                        Governorate <span class="required">*</span>
                                    </label>
                                    <div class="input-with-icon">
                                        <i class="fas fa-map input-icon"></i>
                                        <input asp-for="State" class="cyber-input" style="padding-left: 2.75rem;" placeholder="Governorate" />
                                    </div>
                                    <span asp-validation-for="State" class="cyber-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-floating-group">
                                    <label asp-for="ZipCode" class="cyber-label">
                                        Postal Code <span class="required">*</span>
                                    </label>
                                    <input asp-for="ZipCode" class="cyber-input" placeholder="12345" />
                                    <span asp-validation-for="ZipCode" class="cyber-validation-error"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="checkout-section">
                    <div class="section-header">
                        <div class="section-icon">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        <h3 class="section-title">Payment Method</h3>
                    </div>
                    <div class="section-body">
                        <div class="payment-methods">
                            <label class="payment-method">
                                <input type="radio" name="paymentMethod" value="card" checked>
                                <div class="payment-method-card">
                                    <i class="fas fa-credit-card"></i>
                                    <span>Credit Card</span>
                                </div>
                                <div class="payment-check">
                                    <i class="fas fa-check"></i>
                                </div>
                            </label>
                            <label class="payment-method">
                                <input type="radio" name="paymentMethod" value="debit">
                                <div class="payment-method-card">
                                    <i class="fas fa-money-check-alt"></i>
                                    <span>Debit Card</span>
                                </div>
                                <div class="payment-check">
                                    <i class="fas fa-check"></i>
                                </div>
                            </label>
                            <label class="payment-method">
                                <input type="radio" name="paymentMethod" value="cod">
                                <div class="payment-method-card">
                                    <i class="fas fa-money-bill-wave"></i>
                                    <span>Cash on Delivery</span>
                                </div>
                                <div class="payment-check">
                                    <i class="fas fa-check"></i>
                                </div>
                            </label>
                            <label class="payment-method">
                                <input type="radio" name="paymentMethod" value="instapay">
                                <div class="payment-method-card">
                                    <i class="fas fa-mobile-alt"></i>
                                    <span>InstaPay</span>
                                </div>
                                <div class="payment-check">
                                    <i class="fas fa-check"></i>
                                </div>
                            </label>
                        </div>

                        <div id="cardPaymentForm">
                            <!-- Card Visual -->
                            <div class="card-visual">
                                <div class="card-chip"></div>
                                <div class="card-number-display" id="cardNumberDisplay">•••• •••• •••• ••••</div>
                                <div class="card-details-row">
                                    <div>
                                        <div class="card-holder-label">Card Holder</div>
                                        <div class="card-holder-name" id="cardHolderDisplay">YOUR NAME</div>
                                    </div>
                                    <div>
                                        <div class="card-expiry-label">Expires</div>
                                        <div class="card-expiry-value" id="cardExpiryDisplay">MM/YY</div>
                                    </div>
                                </div>
                                <div class="card-brand" id="cardBrandIcon">
                                    <i class="fab fa-cc-visa"></i>
                                </div>
                            </div>

                            <div class="form-floating-group">
                                <label class="cyber-label">Card Number <span class="required">*</span></label>
                                <div class="input-with-icon">
                                    <i class="fas fa-credit-card input-icon"></i>
                                    <input type="text" class="cyber-input" style="padding-left: 2.75rem;" 
                                           placeholder="1234 5678 9012 3456" maxlength="19" id="cardNumber">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating-group">
                                        <label class="cyber-label">Expiry Date <span class="required">*</span></label>
                                        <input type="text" class="cyber-input" placeholder="MM/YY" maxlength="5" id="cardExpiry">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating-group">
                                        <label class="cyber-label">CVV <span class="required">*</span></label>
                                        <div class="input-with-icon">
                                            <i class="fas fa-lock input-icon"></i>
                                            <input type="text" class="cyber-input" style="padding-left: 2.75rem;" 
                                                   placeholder="123" maxlength="4" id="cardCvv">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating-group mb-0">
                                <label class="cyber-label">Name on Card <span class="required">*</span></label>
                                <input type="text" class="cyber-input" placeholder="As shown on card" id="cardName">
                            </div>
                        </div>

                        <div class="security-notice">
                            <i class="fas fa-shield-alt"></i>
                            <span>Your payment information is encrypted with 256-bit SSL security</span>
                        </div>
                    </div>
                </div>

                <!-- Order Notes -->
                <div class="checkout-section">
                    <div class="section-header">
                        <div class="section-icon">
                            <i class="fas fa-sticky-note"></i>
                        </div>
                        <h3 class="section-title">Order Notes (Optional)</h3>
                    </div>
                    <div class="section-body">
                        <div class="form-floating-group mb-0">
                            <label class="cyber-label">Special Instructions</label>
                            <textarea asp-for="Notes" class="cyber-input cyber-textarea" rows="3"
                                placeholder="Special delivery instructions, gift message, etc."></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="summary-sticky">
                    <div class="summary-card">
                        <div class="summary-header">
                            <h3>
                                <i class="fas fa-receipt"></i>
                                Order Summary
                            </h3>
                        </div>
                        <div class="summary-body">
                            <div class="summary-items">
                                @if (Model.Items != null)
                                {
                                    @foreach (var item in Model.Items)
                                    {
                                        <div class="summary-item">
                                            <img src="@(item.ImageUrl ?? "/images/placeholder.svg")" 
                                                 alt="@item.ProductName" class="summary-item-image"
                                                 onerror="this.onerror=null; this.src='/images/placeholder.svg';">
                                            <div class="summary-item-details">
                                                <div class="summary-item-name">@item.ProductName</div>
                                                <div class="summary-item-qty">Qty: @item.Quantity</div>
                                            </div>
                                            <div class="summary-item-price">@item.Total.ToString("N0") EGP</div>
                                        </div>
                                    }
                                }
                            </div>

                            <!-- Promo Code -->
                            <div class="promo-section">
                                <div class="promo-input-group">
                                    <input type="text" class="cyber-input" placeholder="Promo code">
                                    <button type="button" class="cyber-btn cyber-btn-outline">Apply</button>
                                </div>
                            </div>

                            <div class="summary-divider"></div>

                            <div class="summary-row">
                                <span>Subtotal (@itemCount items)</span>
                                <span>@Model.Subtotal.ToString("N0") EGP</span>
                            </div>
                            <div class="summary-row">
                                <span>Shipping</span>
                                <span class="@(Model.Shipping == 0 ? "free-shipping" : "")">
                                    @(Model.Shipping == 0 ? "FREE" : Model.Shipping.ToString("N0") + " EGP")
                                </span>
                            </div>
                            <div class="summary-row">
                                <span>Tax (14%)</span>
                                <span>@Model.Tax.ToString("N0") EGP</span>
                            </div>

                            <div class="summary-row total">
                                <span>Total</span>
                                <span>@Model.Total.ToString("N0") EGP</span>
                            </div>

                            <button type="submit" class="place-order-btn">
                                <i class="fas fa-lock"></i>
                                Place Order Securely
                            </button>

                            <div class="delivery-estimate">
                                <i class="fas fa-truck"></i>
                                <div class="delivery-estimate-text">
                                    Estimated delivery: <strong>@DateTime.Now.AddDays(3).ToString("MMM dd") - @DateTime.Now.AddDays(5).ToString("MMM dd")</strong>
                                </div>
                            </div>

                            <p class="checkout-terms">
                                By placing this order, you agree to our
                                <a href="/Home/Privacy">Terms of Service</a> and
                                <a href="/Home/Privacy">Privacy Policy</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Payment method toggle
        document.querySelectorAll('.payment-method input').forEach(radio => {
            radio.addEventListener('change', function() {
                const cardForm = document.getElementById('cardPaymentForm');
                if (this.value === 'card' || this.value === 'debit') {
                    cardForm.style.display = 'block';
                } else {
                    cardForm.style.display = 'none';
                }
            });
        });

        // Format card number and update display
        document.getElementById('cardNumber')?.addEventListener('input', function(e) {
            let value = this.value.replace(/\s/g, '').replace(/\D/g, '');
            let formatted = value.match(/.{1,4}/g)?.join(' ') || value;
            this.value = formatted;
            
            // Update card visual
            const display = document.getElementById('cardNumberDisplay');
            if (value.length > 0) {
                let displayValue = formatted.padEnd(19, '•').replace(/ /g, ' ');
                display.textContent = displayValue;
            } else {
                display.textContent = '•••• •••• •••• ••••';
            }
            
            // Detect card brand
            const brandIcon = document.getElementById('cardBrandIcon');
            if (value.startsWith('4')) {
                brandIcon.innerHTML = '<i class="fab fa-cc-visa"></i>';
            } else if (value.startsWith('5')) {
                brandIcon.innerHTML = '<i class="fab fa-cc-mastercard"></i>';
            } else if (value.startsWith('3')) {
                brandIcon.innerHTML = '<i class="fab fa-cc-amex"></i>';
            } else {
                brandIcon.innerHTML = '<i class="fab fa-cc-visa"></i>';
            }
        });
        
        // Format expiry and update display
        document.getElementById('cardExpiry')?.addEventListener('input', function(e) {
            let value = this.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            this.value = value;
            
            const display = document.getElementById('cardExpiryDisplay');
            display.textContent = value || 'MM/YY';
        });
        
        // Update cardholder name
        document.getElementById('cardName')?.addEventListener('input', function(e) {
            const display = document.getElementById('cardHolderDisplay');
            display.textContent = this.value.toUpperCase() || 'YOUR NAME';
        });

        // Step animation on form interaction
        document.querySelectorAll('.checkout-section input, .checkout-section textarea').forEach(input => {
            input.addEventListener('focus', function() {
                this.closest('.checkout-section').style.borderColor = 'var(--arcade-primary)';
            });
            input.addEventListener('blur', function() {
                this.closest('.checkout-section').style.borderColor = 'var(--arcade-border)';
            });
        });
    </script>
}
